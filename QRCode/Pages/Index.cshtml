@page
@model QRCode.Pages.IndexModel
@{
    ViewData["Title"] = "توليد كود QR لبطاقة جهة اتصال";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white text-center fs-4 fw-bold">
            توليد كود QR لبطاقة جهة اتصال (vCard)
        </div>

        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Input.FullName" class="form-label fw-semibold">الاسم الكامل</label>
                        <input asp-for="Input.FullName" class="form-control" />
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.JobTitle" class="form-label fw-semibold">الوظيفة</label>
                        <input asp-for="Input.JobTitle" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Input.PhoneNumber" class="form-label fw-semibold">رقم الهاتف</label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Input.WhatsAppNumber" class="form-label fw-semibold">واتساب</label>
                        <input asp-for="Input.WhatsAppNumber" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Input.OtherPhoneNumber" class="form-label fw-semibold">رقم آخر</label>
                        <input asp-for="Input.OtherPhoneNumber" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Email" class="form-label fw-semibold">البريد الإلكتروني</label>
                        <input asp-for="Input.Email" class="form-control" type="email" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Address" class="form-label fw-semibold">العنوان</label>
                        <input asp-for="Input.Address" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.WebsiteUrl" class="form-label fw-semibold">الموقع الإلكتروني</label>
                        <input asp-for="Input.WebsiteUrl" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.FacebookUrl" class="form-label fw-semibold">Facebook</label>
                        <input asp-for="Input.FacebookUrl" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.InstagramUrl" class="form-label fw-semibold">Instagram</label>
                        <input asp-for="Input.InstagramUrl" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.LinkedInUrl" class="form-label fw-semibold">LinkedIn</label>
                        <input asp-for="Input.LinkedInUrl" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.GitHubUrl" class="form-label fw-semibold">GitHub</label>
                        <input asp-for="Input.GitHubUrl" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Input.Photo" class="form-label fw-semibold">الصورة الشخصية</label>
                        <input asp-for="Input.Photo" class="form-control" type="file" accept="image/*" />
                        <small class="text-muted">يُفضل أن تكون الصورة صغيرة الحجم (≤ 5KB بعد الضغط)</small>
                        <span asp-validation-for="Input.Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 fw-bold">
                        توليد الكود <i class="bi bi-qr-code ms-1"></i>
                    </button>
                </div>
            </form>

            @if (Model.QrCodeBase64 != null)
            {
                <hr class="my-4" />
                <div class="text-center">
                    <h5 class="fw-bold text-primary">الكود الناتج:</h5>
                    <img src="@Model.QrCodeBase64" alt="QR Code" class="img-thumbnail shadow" style="max-width: 250px;" />
                    <p class="text-muted mt-2">يمكنك حفظ الصورة ومسحها لعرض بيانات الاتصال.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model Keswa.Pages.Finishing.TransferModel
@{
    ViewData["Title"] = "تحويل إلى الجودة";
}

<h1>@ViewData["Title"]</h1>

<h4>المنتج: @Model.Product.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="TransferQuantity" class="control-label"></label>
                <input asp-for="TransferQuantity" class="form-control" />
                <span asp-validation-for="TransferQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تحويل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">العودة إلى القائمة</a>
</div>

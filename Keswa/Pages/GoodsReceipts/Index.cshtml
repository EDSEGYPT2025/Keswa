@page
@model Keswa.Pages.GoodsReceipts.IndexModel
@{
    ViewData["Title"] = "إدارة سندات الاستلام";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted">عرض وتتبع جميع سندات استلام البضاعة.</p>
    </div>
    <div>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>إنشاء سند جديد</a>
    </div>
</div>

<!-- Search Bar -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-center">
                <div class="col">
                    <input asp-for="SearchTerm" class="form-control" placeholder="ابحث برقم السند أو اسم المخزن..." />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary"><i class="bi bi-search me-2"></i>بحث</button>
                </div>
                <div class="col-auto">
                    <a asp-page="./Index" class="btn btn-outline-secondary">عرض الكل</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Goods Receipt Notes Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.GoodsReceiptNotes[0].DocumentNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.GoodsReceiptNotes[0].ReceiptDate)</th>
                        <th>@Html.DisplayNameFor(model => model.GoodsReceiptNotes[0].Warehouse.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.GoodsReceiptNotes[0].TransactionType)</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GoodsReceiptNotes)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.DocumentNumber)</td>
                            <td>@item.ReceiptDate.ToShortDateString()</td>
                            <td>@Html.DisplayFor(modelItem => item.Warehouse.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye me-1"></i> عرض</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage - 1)">السابق</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./Index"
                               asp-route-SearchTerm="@Model.SearchTerm"
                               asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage + 1)">التالي</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

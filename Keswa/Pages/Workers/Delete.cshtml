@page
@model Keswa.Pages.Workers.DeleteModel
@{
    ViewData["Title"] = "حذف العامل";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">تأكيد حذف العامل: @Model.Worker.Name</p>
</div>


<div class="card shadow-sm border-0">
    <div class="card-body">
        <h5 class="card-title text-danger">هل أنت متأكد أنك تريد حذف هذا العامل نهائياً؟</h5>
        <p>لا يمكن التراجع عن هذا الإجراء.</p>
        <dl class="row mt-4">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Worker.WorkerCode)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Worker.WorkerCode)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Worker.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Worker.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Worker.Department)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Worker.Department)</dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Worker.Id" />
            <hr class="my-4" />
            <div class="d-flex justify-content-end">
                <a asp-page="./Index" class="btn btn-outline-secondary me-2">إلغاء</a>
                <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
            </div>
        </form>
    </div>
</div>

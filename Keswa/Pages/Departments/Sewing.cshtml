@page
@model Keswa.Pages.Departments.SewingModel
@{
    ViewData["Title"] = "شاشة قسم الخياطة";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">متابعة تشغيلات الخياطة وتوزيعها على العمال وتسجيل الإنتاج.</p>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        @* ===== جدول التشغيلات الجاهزة للتوزيع ===== *@
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-box-arrow-in-down me-2"></i>تشغيلات جاهزة للتوزيع</h5>
            </div>
            <div class="card-body">
                @if (Model.PendingBatches.Any())
                {
                    <table class="table table-sm table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>رقم التشغيلة</th>
                                <th>الموديل</th>
                                <th class="text-center">الكمية</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var batch in Model.PendingBatches)
                            {
                                <tr>
                                    <td><strong>@batch.SewingBatchNumber</strong></td>
                                    <td>@batch.ProductName</td>
                                    <td class="text-center">@batch.Quantity</td>
                                    <td class="text-end">
                                        <a href="/Departments/_AssignSewingBatch?sewingBatchId=@batch.SewingBatchId"
                                           class="btn btn-sm btn-primary modal-btn">
                                            <i class="bi bi-person-plus-fill me-1"></i> تسليم لعامل
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center text-muted p-3">
                        <i class="bi bi-info-circle fs-4"></i>
                        <p class="mt-2 mb-0">لا توجد تشغيلات جاهزة للتوزيع حالياً.</p>
                    </div>
                }
            </div>
        </div>

        @* ===== جدول التشغيلات قيد التنفيذ ===== *@
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-people-fill me-2"></i>تشغيلات قيد التنفيذ لدى العمال</h5>
            </div>
            <div class="card-body">
                @if (Model.AssignmentsInProgress.Any())
                {
                    <table class="table table-sm table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>العامل</th>
                                <th>رقم التشغيلة</th>
                                <th class="text-center">متبقي لديه</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.AssignmentsInProgress)
                            {
                                <tr>
                                    <td><strong>@assignment.WorkerName</strong></td>
                                    <td>@assignment.SewingBatchNumber</td>
                                    <td class="text-center text-danger fw-bold">@assignment.RemainingQuantity</td>
                                    <td class="text-end">
                                        <a href="/Departments/_ReceiveFromWorkerModal?assignmentId=@assignment.AssignmentId"
                                           class="btn btn-sm btn-info modal-btn">
                                            <i class="bi bi-clipboard-check-fill me-1"></i> استلام إنتاج
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center text-muted p-3">
                        <i class="bi bi-check2-circle fs-4"></i>
                        <p class="mt-2 mb-0">لا توجد تشغيلات قيد التنفيذ لدى العمال حالياً.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-send-check-fill me-2"></i>إنتاج جاهز للتحويل</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>رقم التشغيلة</th>
                            <th class="text-center">الكمية الجاهزة</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="3" class="text-center text-muted">سيتم تفعيل هذا الجزء لاحقاً.</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* ===== تم حذف كود الشاشة المنبثقة من هنا لأنه نُقل إلى _Layout.cshtml ===== *@


@section Scripts {
    <script>
        $(function () {
            var modalPlaceholder = $('#mainModal');
            var modalContent = modalPlaceholder.find('.modal-content');

            var loadingSpinner = `
                    <div class="modal-body text-center p-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3 text-muted">جاري تحميل البيانات...</p>
                    </div>`;

            $(document).on('click', '.modal-btn', function (event) {
                event.preventDefault();
                var url = $(this).attr('href');

                modalContent.html(loadingSpinner);
                modalPlaceholder.modal('show');

                modalContent.load(url, function (response, status, xhr) {
                    if (status == "error") {
                        console.error("Error loading modal. Status:", xhr.status, "Message:", xhr.statusText);
                        modalPlaceholder.modal('hide');
                        alert("حدث خطأ أثناء تحميل البيانات.");
                    }
                });
            });

            modalPlaceholder.on('hidden.bs.modal', function () {
                modalContent.empty();
            });
        });
    </script>
}
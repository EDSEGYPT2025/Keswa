@page
@model Keswa.Pages.Departments.SewingModel
@{
    ViewData["Title"] = "شاشة قسم الخياطة";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">متابعة تشغيلات الخياطة وتوزيعها على العمال وتسجيل الإنتاج.</p>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-box-arrow-in-down me-2"></i>تشغيلات مستلمة (جاهزة للتوزيع)</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>رقم التشغيلة</th>
                            <th>الموديل</th>
                            <th class="text-center">الكمية</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.PendingBatches.Any())
                        {
                            <tr><td colspan="4" class="text-center text-muted">لا توجد تشغيلات جاهزة للتوزيع.</td></tr>
                        }
                        @foreach (var batch in Model.PendingBatches)
                        {
                            <tr>
                                <td><strong>@batch.SewingBatchNumber</strong></td>
                                <td>@batch.ProductName</td>
                                <td class="text-center">@batch.Quantity</td>
                                <td class="text-end">
                                    <a asp-page="./AssignBatch" asp-route-sewingBatchId="@batch.SewingBatchId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-person-plus-fill me-1"></i> تسليم لعامل
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-people-fill me-2"></i>تشغيلات قيد التنفيذ لدى العمال</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>العامل</th>
                            <th>رقم التشغيلة الداخلية</th>
                            <th class="text-center">متبقي لديه</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.AssignmentsInProgress.Any())
                        {
                            <tr><td colspan="4" class="text-center text-muted">لا توجد تشغيلات قيد التنفيذ لدى العمال.</td></tr>
                        }
                        @foreach (var assignment in Model.AssignmentsInProgress)
                        {
                            <tr>
                                <td><strong>@assignment.WorkerName</strong></td>
                                <td>@assignment.SewingBatchNumber</td>
                                <td class="text-center text-danger fw-bold">@assignment.RemainingQuantity</td>
                                <td class="text-end">
                                    <a asp-page="./ReceiveProduction" asp-route-assignmentId="@assignment.AssignmentId" class="btn btn-sm btn-success">
                                        <i class="bi bi-clipboard-check-fill me-1"></i> استلام إنتاج
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-send-check-fill me-2"></i>إنتاج جاهز للتحويل</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>رقم التشغيلة</th>
                            <th class="text-center">الكمية الجاهزة</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.ReadyBatches.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">لا يوجد إنتاج جاهز للتحويل.</td>
                            </tr>
                        }
                        @foreach (var batch in Model.ReadyBatches)
                        {
                            <tr>
                                <td><strong>@batch.SewingBatchNumber</strong></td>
                                <td class="text-center text-success fw-bold">@batch.ReadyQuantity</td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-warning disabled">
                                        <i class="bi bi-box-arrow-up-right me-1"></i> تحويل
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
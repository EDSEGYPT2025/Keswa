@model Keswa.Pages.Departments.CuttingModel
@{
    ViewData["Title"] = "شاشة قسم القص";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض أوامر الشغل الحالية وتسجيل بيانات القص.</p>
</div>

<div class="row g-4">
    <!-- Left Panel: Work Order List -->
    <div class="col-lg-5">
        <div class="card shadow-sm border-0" style="max-height: 80vh; display: flex; flex-direction: column;">
            <div class="card-header bg-transparent">
                <h5 class="mb-0">أوامر الشغل في قسم القص</h5>
            </div>


            <div class="list-group list-group-flush overflow-auto">
                @if (!Model.WorkOrdersInCutting.Any())
                {
                    <div class="p-4 text-center text-muted">لا توجد أوامر شغل في هذا القسم حالياً.</div>
                }
                @foreach (var wo in Model.WorkOrdersInCutting)
                {
                    var isActive = wo.WorkOrderId == Model.SelectedWorkOrder?.Id;

                    var percentage = (double)wo.QuantityCut / wo.QuantityToProduce * 100;
                    var displayPercentage = percentage > 100 ? 100 : percentage;
                    var barClass = wo.QuantityCut > wo.QuantityToProduce ? "bg-danger" : "bg-success";
                    var label = wo.QuantityCut > wo.QuantityToProduce
                        ? $"{percentage:F1}% (زيادة) ⚠️"
                        : $"{percentage:F1}%";

                    var tooltip = wo.QuantityCut > wo.QuantityToProduce
                        ? $"تم قص {wo.QuantityCut} من {wo.QuantityToProduce} (زيادة) ⚠️"
                        : $"تم قص {wo.QuantityCut} من {wo.QuantityToProduce}";

                    <a asp-page="/Departments/Cutting" asp-route-id="@wo.WorkOrderId"
                       class="list-group-item list-group-item-action @(isActive ? "active" : "")">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 fw-bold">@wo.WorkOrderNumber</h6>
                            <small>@wo.ProductName</small>
                        </div>
                        <p class="mb-1">
                            مطلوب: @wo.QuantityToProduce |
                            <span class="text-success">تم قص: @wo.QuantityCut</span> |
                            <span class="text-danger">متبقي: @wo.RemainingToCut</span>
                        </p>
                        <div class="progress" style="height: 5px;" title="@tooltip">
                            <div class="progress-bar @barClass"
                                 role="progressbar"
                                 style="width:@displayPercentage%;"
                                 aria-valuenow="@wo.QuantityCut"
                                 aria-valuemin="0"
                                 aria-valuemax="@wo.QuantityToProduce">
                            </div>
                        </div>
                        <small class="d-block mt-1 @(wo.QuantityCut > wo.QuantityToProduce ? "text-danger fw-bold" : "text-muted")">
                            @label
                        </small>
                    </a>
                }
            </div>


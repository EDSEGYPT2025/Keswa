        </div>*@
        </div>
    </div>

    <!-- Right Panel: Details and Logging -->
    <div class="col-lg-7">
        @if (Model.SelectedWorkOrder == null)
        {
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <div class="text-center">
                        <i class="bi bi-scissors" style="font-size: 4rem; color: #e0e0e0;"></i>
                        <p class="text-muted mt-3">الرجاء اختيار أمر شغل من القائمة.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Finish Stage Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">إنهاء مرحلة القص</h5>
                        <p class="text-muted mb-0">عند الانتهاء، قم بإنهاء المرحلة لنقلها للقسم التالي.</p>
                    </div>
                    <div>
                        <form method="post" asp-page-handler="FinishCutting">
                            <input type="hidden" name="workOrderId" value="@Model.SelectedWorkOrder.Id" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2-circle me-2"></i>إنهاء المرحلة
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            @if (Model.CanCreateStatement)
            {
                <!-- New Cutting Statement Form -->
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">إنشاء بيان قص جديد لأمر الشغل: @Model.SelectedWorkOrder.WorkOrderNumber</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" name="workOrderId" value="@Model.SelectedWorkOrder.Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label asp-for="NewCuttingStatement.MaterialId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.MaterialId" id="materialSelect" class="form-select searchable-select" asp-items="Model.IssuedMaterialsList">
                                        <option value="">-- اختر الخامة --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.MaterialId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">الكمية المصروفة</label>
                                    <input id="issued-quantity" class="form-control" readonly style="background-color: #e9ecef;" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">الكمية المتبقية</label>
                                    <input id="remaining-quantity" class="form-control" readonly style="background-color: #e9ecef;" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NewCuttingStatement.Meterage" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Meterage" class="form-control" type="number" step="any" min="0.01" />
                                    <span asp-validation-for="NewCuttingStatement.Meterage" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NewCuttingStatement.Count" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Count" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="NewCuttingStatement.Count" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.ProductId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.ProductId" class="form-select searchable-select" asp-items="Model.ProductList">
                                        <option value="">-- اختر الموديل --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.ProductId" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.Color" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Color" id="color-display" class="form-control" readonly style="background-color: #e9ecef;" />
                                    <span asp-validation-for="NewCuttingStatement.Color" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.WorkerId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.WorkerId" class="form-select searchable-select" asp-items="Model.WorkerList">
                                        <option value="">-- اختر العامل --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.WorkerId" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">
                                    <label asp-for="NewCuttingStatement.CustomerId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.CustomerId" class="form-select searchable-select" asp-items="Model.CustomerList">
                                        <option value="">-- اختر العميل --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.CustomerId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-success">حفظ البيان وتسجيل الإنتاج</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>خطوة مطلوبة</h5>
                    <p>@Model.PreRequisiteMessage</p>
                    <hr>
                    <a asp-page="/WorkOrders/Details" asp-route-id="@Model.SelectedWorkOrder.Id" class="btn btn-primary">الانتقال إلى تفاصيل أمر الشغل</a>
                </div>
            }

            <!-- Cutting Statements Table -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">بيانات القص السابقة لهذا الأمر</h5>
                    <a asp-page="./PrintCuttingStatementAll" asp-route-workOrderId="@Model.SelectedWorkOrder.Id"
                       class="btn btn-sm btn-outline-primary" target="_blank">
                        <i class="bi bi-printer me-1"></i> طباعة جميع البيانات
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th></th>
                                    <th>رقم التشغيل</th>
                                    <th>الخامة</th>
                                    <th>المتراج</th>
                                    <th>الموديل</th>
                                    <th>اللون</th>
                                    <th>العدد</th>
                                    <th>العامل</th>
                                    <th>العميل</th>
                                    <th>التاريخ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.CuttingStatements.Any())
                                {
                                    <tr><td colspan="10" class="text-center text-muted">لم يتم تسجيل أي بيانات قص.</td></tr>
                                }
                                @foreach (var log in Model.CuttingStatements)
                                {
                                    <tr>
                                        <td>
                                            <a asp-page="./PrintCuttingStatement" asp-route-id="@log.Id" class="btn btn-sm btn-outline-secondary" target="_blank" title="طباعة البيان"><i class="bi bi-printer"></i></a>
                                        </td>
                                        <td><strong>@log.RunNumber</strong></td>
                                        <td>@log.Material.Name - @log.Material.Color?.Name</td>
                                        <td>@log.Meterage</td>
                                        <td>@log.Product.Name</td>
                                        <td>@log.Color</td>
                                        <td>@log.Count</td>
                                        <td>@log.Worker.Name</td>
                                        <td>@log.Customer.Name</td>
                                        <td>@log.StatementDate.ToString("yyyy/MM/dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            const materialStockData = JSON.parse('@Html.Raw(Model.MaterialStockJson ?? "{}")');

            $('#materialSelect').on('change', function () {
                const materialId = $(this).val();
                const issuedQtyInput = $('#issued-quantity');
                const remainingQtyInput = $('#remaining-quantity');
                const colorDisplay = $('#color-display');

                if (materialId && materialStockData[materialId]) {
                    const info = materialStockData[materialId];
                    issuedQtyInput.val(info.issued.toFixed(2));
                    remainingQtyInput.val(info.remaining.toFixed(2));
                    colorDisplay.val(info.color);
                } else {
                    issuedQtyInput.val('');
                    remainingQtyInput.val('');
                    colorDisplay.val('');
                }
            });
        });
    </script>
}

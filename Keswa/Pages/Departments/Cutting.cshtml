@page
@using Keswa.Enums
@model Keswa.Pages.Departments.CuttingModel
@{
    ViewData["Title"] = "شاشة قسم القص";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض أوامر الشغل الحالية وتسجيل بيانات القص.</p>
</div>

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card shadow-sm border-0" style="max-height: 80vh; display: flex; flex-direction: column;">

            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="mb-0">أوامر الشغل في قسم القص</h5>
                <a asp-page="./PrintAllCuttingWorkOrders" target="_blank" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-printer me-1"></i> طباعة الكل
                </a>
            </div>

            <div class="list-group overflow-auto p-2">
                @if (!Model.WorkOrdersInCutting.Any())
                {
                    <div class="p-4 text-center text-muted">لا توجد أوامر شغل في هذا القسم حالياً.</div>
                }
                @foreach (var wo in Model.WorkOrdersInCutting)
                {
                    var isActive = wo.WorkOrderId == Model.SelectedWorkOrder?.Id;
                    var percentage = wo.QuantityToProduce > 0 ? (double)wo.QuantityCut / wo.QuantityToProduce * 100 : 0;
                    var displayPercentage = percentage > 100 ? 100 : percentage;
                    var barClass = wo.QuantityCut > wo.QuantityToProduce ? "bg-danger" : "bg-success";
                    var label = wo.QuantityCut > wo.QuantityToProduce ? $"{percentage:F1}% (زيادة) ⚠️" : $"{percentage:F1}%";
                    var tooltip = wo.QuantityCut > wo.QuantityToProduce ? $"تم قص {wo.QuantityCut} من {wo.QuantityToProduce} (زيادة) ⚠️" : $"تم قص {wo.QuantityCut} من {wo.QuantityToProduce}";

                    <a asp-page="/Departments/Cutting" asp-route-id="@wo.WorkOrderId"
                       class="list-group-item list-group-item-action @(isActive ? "active" : "") mb-2" style="border-radius: .5rem;">
                        <div class="d-flex w-100 justify-content-between">
                            <h6 class="mb-1 fw-bold">@wo.WorkOrderNumber</h6>
                            <small>@wo.ProductName</small>
                        </div>
                        <p class="mb-1">
                            مطلوب: @wo.QuantityToProduce |
                            <span class="@(isActive ? "" : "text-success")">تم قص: @wo.QuantityCut</span> |
                            <span class="@(isActive ? "" : "text-danger")">متبقي: @wo.RemainingToCut</span>
                        </p>
                        <div class="progress" style="height: 5px;" title="@tooltip">
                            <div class="progress-bar @barClass"
                                 role="progressbar"
                                 style="width:@displayPercentage%;"
                                 aria-valuenow="@wo.QuantityCut"
                                 aria-valuemin="0"
                                 aria-valuemax="@wo.QuantityToProduce">
                            </div>
                        </div>
                        <small class="d-block mt-1 @(isActive ? "" : (wo.QuantityCut > wo.QuantityToProduce ? "text-danger fw-bold" : "text-muted"))">
                            @label
                        </small>

                        <hr class="my-2">
                        <div class="d-flex justify-content-between small">
                            <span title="إجمالي الخامة المنصرفة لأمر الشغل">
                                <i class="bi bi-box-arrow-down text-primary"></i>
                                <strong>منصرف:</strong> @wo.TotalMaterialIssued.ToString("F2") م
                            </span>
                            <span title="إجمالي الخامة المستهلكة في القص">
                                <i class="bi bi-scissors text-info"></i>
                                <strong>مستهلك:</strong> @wo.TotalMaterialConsumed.ToString("F2") م
                            </span>
                            <span title="الكمية المتبقية من الخامة لدى القسم">
                                <i class="bi bi-box-seam text-success"></i>
                                <strong>متبقي:</strong> @wo.TotalMaterialRemaining.ToString("F2") م
                            </span>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        @if (Model.SelectedWorkOrder == null)
        {
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <div class="text-center">
                        <i class="bi bi-scissors" style="font-size: 4rem; color: #e0e0e0;"></i>
                        <p class="text-muted mt-3">الرجاء اختيار أمر شغل من القائمة.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">إنهاء مرحلة القص</h5>
                        <p class="text-muted mb-0">عند الانتهاء، قم بإنهاء المرحلة لنقلها للقسم التالي.</p>
                    </div>
                    <div>
                        <form method="post" asp-page-handler="FinishCutting">
                            <input type="hidden" name="workOrderId" value="@Model.SelectedWorkOrder.Id" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check2-circle me-2"></i>إنهاء المرحلة
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            @if (Model.CanCreateStatement)
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">إنشاء بيان قص جديد لأمر الشغل: @Model.SelectedWorkOrder.WorkOrderNumber</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" name="workOrderId" value="@Model.SelectedWorkOrder.Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label asp-for="NewCuttingStatement.MaterialId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.MaterialId" id="materialSelect" class="form-select searchable-select" asp-items="Model.IssuedMaterialsList">
                                        <option value="">-- اختر الخامة --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.MaterialId" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">الكمية المصروفة</label>
                                    <input id="issued-quantity" class="form-control" readonly style="background-color: #e9ecef;" />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label">الكمية المتبقية</label>
                                    <input id="remaining-quantity" class="form-control" readonly style="background-color: #e9ecef;" />
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NewCuttingStatement.Meterage" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Meterage" id="meterage-input" class="form-control" type="number" step="any" min="0.01" />
                                    <span asp-validation-for="NewCuttingStatement.Meterage" class="text-danger"></span>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="NewCuttingStatement.Count" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Count" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="NewCuttingStatement.Count" class="text-danger"></span>
                                </div>

                                <div id="meterage-validation-warning" class="col-12" style="display: none;">
                                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                        <div>
                                            <strong>تحذير!</strong> الكمية المدخلة أكبر من الكمية المتبقية من الخامة.
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.ProductId" class="form-label"></label>
                                    <input type="hidden" asp-for="NewCuttingStatement.ProductId" />
                                    <input type="text" class="form-control" value="@Model.SelectedWorkOrder.Product?.Name" readonly style="background-color: #e9ecef;" />
                                    <span asp-validation-for="NewCuttingStatement.ProductId" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.Color" class="form-label"></label>
                                    <input asp-for="NewCuttingStatement.Color" id="color-display" class="form-control" readonly style="background-color: #e9ecef;" />
                                    <span asp-validation-for="NewCuttingStatement.Color" class="text-danger"></span>
                                </div>

                                <div class="col-md-4">
                                    <label asp-for="NewCuttingStatement.WorkerId" class="form-label"></label>
                                    <select asp-for="NewCuttingStatement.WorkerId" class="form-select searchable-select" asp-items="Model.WorkerList">
                                        <option value="">-- اختر العامل --</option>
                                    </select>
                                    <span asp-validation-for="NewCuttingStatement.WorkerId" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">
                                    <label asp-for="NewCuttingStatement.CustomerId" class="form-label"></label>
                                    <input type="hidden" asp-for="NewCuttingStatement.CustomerId" />
                                    <input type="text" class="form-control" value="@Model.SelectedCustomer?.Name" readonly style="background-color: #e9ecef;" />
                                    <span asp-validation-for="NewCuttingStatement.CustomerId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="text-end mt-4">
                                <button type="submit" id="save-button" class="btn btn-success">حفظ البيان وتسجيل الإنتاج</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>خطوة مطلوبة</h5>
                    <p>@Model.PreRequisiteMessage</p>
                    <hr>
                    <a asp-page="/WorkOrders/Details" asp-route-id="@Model.SelectedWorkOrder.Id" class="btn btn-primary">الانتقال إلى تفاصيل أمر الشغل</a>
                </div>
            }

            <div class="card shadow-sm border-0">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">بيانات القص السابقة لهذا الأمر</h5>
                    <a asp-page="./PrintCuttingStatementAll" asp-route-workOrderId="@Model.SelectedWorkOrder.Id"
                       class="btn btn-sm btn-outline-primary" target="_blank">
                        <i class="bi bi-printer me-1"></i> طباعة جميع البيانات
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th></th>
                                    <th>رقم التشغيل</th>
                                    <th>الخامة</th>
                                    <th>المتراج</th>
                                    <th>العدد</th>
                                    <th>العامل</th>
                                    <th>التاريخ</th>
                                    <th>الحالة</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CuttingStatements == null || !Model.CuttingStatements.Any())
                                {
                                    <tr><td colspan="9" class="text-center text-muted">لم يتم تسجيل أي بيانات قص.</td></tr>
                                }
                                else
                                {
                                    @foreach (var log in Model.CuttingStatements)
                                    {
                                        <tr>
                                            <td class="btn-group" role="group">
                                                <a asp-page="./PrintCuttingStatement" asp-route-id="@log.Id" class="btn btn-sm btn-outline-secondary" target="_blank" title="طباعة البيان"><i class="bi bi-printer"></i></a>
                                                <a asp-page="./EditCuttingStatement" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary" title="تعديل البيان"><i class="bi bi-pencil-square"></i></a>
                                                <a asp-page="./DeleteCuttingStatement" asp-route-id="@log.Id" class="btn btn-sm btn-outline-danger" title="حذف البيان"><i class="bi bi-trash"></i></a>
                                            </td>
                                            <td><strong>@log.RunNumber</strong></td>
                                            <td>@(log.Material.Name + (log.Material.Color != null ? $" - {log.Material.Color.Name}" : ""))</td>
                                            <td>@log.Meterage</td>
                                            <td>@log.Count</td>
                                            <td>@log.Worker.Name</td>
                                            <td>@log.StatementDate.ToString("yyyy/MM/dd")</td>
                                            <td>
                                                @if (log.Status == BatchStatus.Transferred)
                                                {
                                                    <span class="badge bg-success">تم التحويل</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">جاهز للتحويل</span>
                                                }
                                            </td>
                                            <td>
                                                @if (log.Status == BatchStatus.PendingTransfer)
                                                {
                                                    <form method="post" asp-page-handler="TransferToSewing">
                                                        <input type="hidden" name="statementId" value="@log.Id" />
                                                        <input type="hidden" name="workOrderId" value="@Model.SelectedWorkOrder.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success">
                                                            <i class="bi bi-send me-1"></i> تحويل
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            const materialStockData = JSON.parse('@Html.Raw(Model.MaterialStockJson ?? "{}")');

            const meterageInput = $('#meterage-input');
            const remainingQtyInput = $('#remaining-quantity');
            const saveButton = $('#save-button');
            const validationWarning = $('#meterage-validation-warning');

            function validateMeterage() {
                const remainingQty = parseFloat(remainingQtyInput.val());
                const currentMeterage = parseFloat(meterageInput.val());

                if (isNaN(remainingQty) || isNaN(currentMeterage) || currentMeterage <= 0) {
                    validationWarning.hide();
                    meterageInput.removeClass('is-invalid');
                    saveButton.prop('disabled', false);
                    return;
                }

                if (currentMeterage > remainingQty) {
                    validationWarning.show();
                    meterageInput.addClass('is-invalid');
                    saveButton.prop('disabled', true);
                } else {
                    validationWarning.hide();
                    meterageInput.removeClass('is-invalid');
                    saveButton.prop('disabled', false);
                }
            }

            meterageInput.on('input', validateMeterage);

            $('#materialSelect').on('change', function () {
                const materialId = $(this).val();
                const issuedQtyInput = $('#issued-quantity');
                const colorDisplay = $('#color-display');

                if (materialId && materialStockData[materialId]) {
                    const info = materialStockData[materialId];
                    issuedQtyInput.val(info.issued.toFixed(2));
                    remainingQtyInput.val(info.remaining.toFixed(2));
                    colorDisplay.val(info.color);
                } else {
                    issuedQtyInput.val('');
                    remainingQtyInput.val('');
                    colorDisplay.val('');
                }

                validateMeterage();
            });
        });
    </script>
}
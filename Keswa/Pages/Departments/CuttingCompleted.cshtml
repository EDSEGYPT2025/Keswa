@page
@model Keswa.Pages.Departments.CuttingCompletedModel
@{
    ViewData["Title"] = "أوامر الشغل المكتملة (قسم القص)";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض جميع أوامر الشغل التي تم إنهاء مرحلة القص الخاصة بها.</p>
</div>

<!-- Search Bar -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-center">
                @*<div class="col">
                    <input asp-for="SearchTerm" class="form-control" placeholder="ابحث برقم أمر الشغل أو اسم المنتج..." />
                </div>*@
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary"><i class="bi bi-search me-2"></i>بحث</button>
                </div>
                <div class="col-auto">
                    <a asp-page="./CuttingCompleted" class="btn btn-outline-secondary">عرض الكل</a>
                </div>
            </div>
        </form>
    </div>
</div>


<!-- Finished Orders Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">

        <!-- زر الطباعة -->
        <div class="mb-3 text-end">
            <a asp-page="./PrintCuttingCompletedAll" target="_blank" class="btn btn-success">
                <i class="bi bi-printer me-1"></i> طباعة الكل
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>رقم أمر الشغل</th>
                        <th>المنتج</th>
                        <th class="text-center">الكمية المطلوبة</th>
                        <th class="text-center">الكمية الفعلية المقصوصة</th>
                        <th class="text-center">الفارق</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model.FinishedOrders)
                    {
                        <tr>
                            <td><strong>@o.WorkOrderNumber</strong></td>
                            <td>@o.ProductName</td>
                            <td class="text-center">@o.QuantityToProduce</td>
                            <td class="text-center fw-bold">@o.TotalCut</td>
                            <td class="text-center">
                                @{
                                    var difference = o.TotalCut - o.QuantityToProduce;
                                    var diffClass = difference == 0 ? "text-muted" : (difference > 0 ? "text-success" : "text-danger");
                                    var diffSign = difference > 0 ? "+" : "";
                                }
                                <span class="fw-bold @diffClass">@diffSign@difference</span>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" asp-page="./CuttingCompletedDetails" asp-route-workOrderId="@o.WorkOrderId">
                                    <i class="bi bi-eye me-1"></i>تفاصيل
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

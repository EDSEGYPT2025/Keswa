@page
@model Keswa.Pages.Departments.Quality.IndexModel
@{
    ViewData["Title"] = "قسم الجودة";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <!-- Pending Batches -->
    <div class="col-md-4">
        <h2>تشغيلات قيد الانتظار</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>رقم التشغيلة</th>
                    <th>المنتج</th>
                    <th>الكمية</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PendingBatches)
                {
                    <tr>
                        <td>@item.BatchNumber</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-page="/Departments/Quality/AssignQualityBatch" asp-route-id="@item.BatchId">تسليم لشغالة</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Assignments In Progress -->
    <div class="col-md-4">
        <h2>مهام قيد التنفيذ</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>العامل</th>
                    <th>رقم التشغيلة</th>
                    <th>الكمية المتبقية</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AssignmentsInProgress)
                {
                    <tr>
                        <td>@item.WorkerName</td>
                        <td>@item.BatchNumber</td>
                        <td>@item.RemainingQuantity</td>
                        <td>
                            <a asp-page="/Departments/Quality/ReceiveQualityProduction" asp-route-id="@item.AssignmentId">استلام شغل</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Completed Batches -->
    <div class="col-md-4">
        <h2>تشغيلات مكتملة</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>رقم التشغيلة</th>
                    <th>المنتج</th>
                    <th>الكمية النهائية</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CompletedBatches)
                {
                    <tr>
                        <td>@item.BatchNumber</td>
                        <td>@item.ProductName</td>
                        <td>@item.FinalQuantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

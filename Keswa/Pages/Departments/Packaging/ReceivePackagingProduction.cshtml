@page "{assignmentId:int}"
@model Keswa.Pages.Departments.Packaging.ReceivePackagingProductionModel
@{
    ViewData["Title"] = "استلام إنتاج مغلف";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">تسجيل الكميات التي أتم الموظف تعبئتها وتغليفها.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0 fw-bold"><i class="bi bi-box-arrow-in-down me-2"></i> تفاصيل عهدة الموظف</h5>
            </div>
            <div class="card-body p-4">
                <div class="row mb-4">
                    <div class="col-6">
                        <label class="text-muted small d-block">الموظف</label>
                        <span class="fw-bold fs-5">@Model.AssignmentVM.WorkerName</span>
                    </div>
                    <div class="col-6 text-end">
                        <label class="text-muted small d-block">الموديل</label>
                        <span class="fw-bold fs-5 text-primary">@Model.AssignmentVM.ProductName</span>
                    </div>
                </div>

                <div class="alert bg-light border-0 d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted me-2">الكمية المسلمة:</span>
                        <span class="fw-bold">@Model.AssignmentVM.AssignedQuantity</span>
                    </div>
                    <div class="vr mx-3"></div>
                    <div>
                        <span class="text-muted me-2">المتبقي حالياً:</span>
                        <span class="fw-bold text-danger fs-4">@Model.AssignmentVM.RemainingQuantity</span>
                    </div>
                </div>

                <hr class="my-4" />

                <form method="post">
                    <input type="hidden" asp-for="Input.AssignmentId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4 text-center">
                        <label asp-for="Input.QuantityToReceive" class="form-label fw-bold"></label>
                        <input asp-for="Input.QuantityToReceive" class="form-control form-control-lg text-center fw-bold border-warning shadow-sm"
                               placeholder="أدخل الكمية هنا..." autofocus />
                        <span asp-validation-for="Input.QuantityToReceive" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold">
                            <i class="bi bi-check-all me-2"></i> تأكيد الاستلام والحفظ
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i> إلغاء والعودة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
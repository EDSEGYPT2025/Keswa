@page
@model Keswa.Pages.Departments.FinishingModel
@{
    ViewData["Title"] = "قسم التشطيب";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <!-- Pending Batches -->
    <div class="col-md-4">
        <h2>تشغيلات قيد الانتظار</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>رقم التشغيلة</th>
                    <th>المنتج</th>
                    <th>الكمية</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PendingBatches)
                {
                    <tr>
                        <td>@item.BatchNumber</td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a asp-page="/Departments/AssignFinishingBatch" asp-route-id="@item.BatchId">تسليم لشغالة</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Assignments In Progress -->
    <div class="col-md-4">
        <h2>مهام قيد التنفيذ</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>العامل</th>
                    <th>رقم التشغيلة</th>
                    <th>الكمية المتبقية</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AssignmentsInProgress)
                {
                    <tr>
                        <td>@item.WorkerName</td>
                        <td>@item.BatchNumber</td>
                        <td>@item.RemainingQuantity</td>
                        <td>
                            <a asp-page="ReceiveFinishingProduction" asp-route-id="@item.AssignmentId">استلام شغل</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Ready for Transfer -->
    <div class="col-md-4">
        <h2>جاهز للنقل للجودة</h2>
        <form method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>رقم التشغيلة</th>
                        <th>المنتج</th>
                        <th>الكمية الجاهزة</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ReadyBatches)
                    {
                        <tr>
                            <td>@item.BatchNumber</td>
                            <td>@item.ProductName</td>
                            <td>@item.ReadyQuantity</td>
                            <td>
                                <button type="submit" asp-page-handler="Transfer" asp-route-batchId="@item.BatchId" class="btn btn-primary">
                                    نقل للجودة
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>

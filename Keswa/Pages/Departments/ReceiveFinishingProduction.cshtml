@page "{assignmentId:int}"
@model Keswa.Pages.Departments.ReceiveFinishingProductionModel
@{
    ViewData["Title"] = "استلام إنتاج من عامل";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                تفاصيل العهدة
            </div>
            <div class="card-body">
                <p><strong>العامل:</strong> @Model.Assignment.Worker.Name</p>
                <p><strong>رقم التشغيلة:</strong> @Model.Assignment.FinishingBatch.FinishingBatchNumber</p>
                <p><strong>الكمية المسلمة للعامل:</strong> @Model.Assignment.AssignedQuantity</p>
                <p><strong>الكمية المتبقية معه:</strong> @Model.Assignment.RemainingQuantity</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.FinishingAssignmentId" />

            <div class="mb-3">
                <label asp-for="Input.QuantityProduced" class="form-label"></label>
                <input asp-for="Input.QuantityProduced" class="form-control" />
                <span asp-validation-for="Input.QuantityProduced" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.QuantityScrapped" class="form-label"></label>
                <input asp-for="Input.QuantityScrapped" class="form-control" />
                <span asp-validation-for="Input.QuantityScrapped" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ScrapReason" class="form-label"></label>
                <textarea asp-for="Input.ScrapReason" class="form-control"></textarea>
                <span asp-validation-for="Input.ScrapReason" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">استلام</button>
                <a asp-page="./Finishing" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page "{assignmentId:int}"
@model Keswa.Pages.Departments.ReceiveFinishingProductionModel
@{
    ViewData["Title"] = "استلام إنتاج تشطيب";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">تسجيل كمية مستلمة (سليمة أو هالك) من عهدة عامل.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light">
                <h5 class="mb-0 fw-bold"><i class="bi bi-info-circle-fill me-2"></i> تفاصيل العهدة</h5>
            </div>
            <div class="card-body p-4">
                <dl class="row mb-4">
                    <dt class="col-sm-4">العامل</dt>
                    <dd class="col-sm-8"><strong>@Model.Assignment.Worker.Name</strong></dd>

                    <dt class="col-sm-4">رقم التشغيلة</dt>
                    <dd class="col-sm-8">@Model.Assignment.FinishingBatch.FinishingBatchNumber</dd>

                    <dt class="col-sm-4">المتبقي لديه</dt>
                    <dd class="col-sm-8"><span class="fw-bold text-danger fs-5">@Model.Assignment.RemainingQuantity</span> قطعة</dd>
                </dl>

                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Input.FinishingAssignmentId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Input.QuantityProduced" class="form-label"></label>
                            <input asp-for="Input.QuantityProduced" class="form-control form-control-lg" />
                            <span asp-validation-for="Input.QuantityProduced" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.QuantityScrapped" class="form-label"></label>
                            <input asp-for="Input.QuantityScrapped" class="form-control form-control-lg" />
                            <span asp-validation-for="Input.QuantityScrapped" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label asp-for="Input.ScrapReason" class="form-label"></label>
                        <textarea asp-for="Input.ScrapReason" class="form-control"></textarea>
                        <span asp-validation-for="Input.ScrapReason" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-clipboard-check-fill me-2"></i> تأكيد الاستلام
                        </button>
                        <a asp-page="./Finishing" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

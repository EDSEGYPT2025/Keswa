@page "{id:int}"
@model Keswa.Pages.Departments.PrintCuttingStatementModel
@{
    Layout = "/Pages/Shared/_PrintLayout.cshtml"; // استخدام تصميم الطباعة الخاص
    ViewData["Title"] = $"طباعة بيان قص - {Model.CuttingStatement.RunNumber}";
}

<style>
    body {
        font-family: 'Tajawal', sans-serif;
        background-color: #fff;
    }

    .print-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        background-color: #fff;
    }

    .print-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #343a40;
        padding-bottom: 15px;
        margin-bottom: 20px;
    }

        .print-header .logo img {
            max-width: 150px;
            height: auto;
        }

        .print-header .title {
            text-align: right;
        }

        .print-header h1 {
            margin: 0;
            font-size: 24px;
            font-weight: 700;
        }

    .print-section {
        margin-bottom: 20px;
    }

        .print-section h5 {
            font-weight: bold;
            background-color: #f8f9fa;
            padding: 8px 12px;
            border-radius: 0.25rem;
            border: 1px solid #dee2e6;
            margin-bottom: 10px;
        }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
    }

    .detail-item {
        display: flex;
    }

        .detail-item dt {
            font-weight: bold;
            min-width: 120px;
        }

    .print-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .print-table th, .print-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: right;
        }

        .print-table thead {
            background-color: #e9ecef;
        }

    .print-footer {
        margin-top: 40px;
        text-align: center;
        font-size: 14px;
        color: #6c757d;
    }

    .print-button-container {
        text-align: center;
        margin: 20px 0;
    }

    @@media print {
        .no-print {
            display: none !important;
        }

        body, .print-container {
            margin: 0;
            padding: 0;
            border: none;
            box-shadow: none;
        }
    }
</style>

<div class="print-button-container no-print">
    <button onclick="window.print()" class="btn btn-primary"><i class="bi bi-printer-fill me-2"></i>طباعة البيان</button>
</div>

<div class="print-container">
    <div class="print-header">
        <div class="logo">
            <!-- ضع رابط الشعار الخاص بك هنا -->
            <img src="~/images/logo.png" alt="شعار مصنع كسوة">
        </div>
        <div class="title">
            <h1>بيان قص</h1>
            <p>رقم التشغيل: @Model.CuttingStatement.RunNumber</p>
        </div>
    </div>

    <div class="print-section">
        <h5>بيانات أمر الشغل</h5>
        <div class="details-grid">
            <div class="detail-item"><dt>رقم أمر الشغل:</dt> <dd>@Model.CuttingStatement.WorkOrder.WorkOrderNumber</dd></div>
            <div class="detail-item"><dt>تاريخ الإنشاء:</dt> <dd>@Model.CuttingStatement.WorkOrder.CreationDate.ToShortDateString()</dd></div>
            <div class="detail-item"><dt>الموديل:</dt> <dd>@Model.CuttingStatement.WorkOrder.Product.Name</dd></div>
            <div class="detail-item"><dt>الكمية الإجمالية:</dt> <dd>@Model.CuttingStatement.WorkOrder.QuantityToProduce قطعة</dd></div>
        </div>
    </div>

    <div class="print-section">
        <h5>تفاصيل بيان القص</h5>
        <table class="print-table">
            <thead>
                <tr>
                    <th>الخامة</th>
                    <th>اللون</th>
                    <th>المتراج المستخدم</th>
                    <th>العدد المقصوص</th>
                    <th>العامل</th>
                    <th>العميل</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.CuttingStatement.Material.Name</td>
                    <td>@Model.CuttingStatement.Material.Color?.Name</td>
                    <td>@Model.CuttingStatement.Meterage</td>
                    <td>@Model.CuttingStatement.Count</td>
                    <td>@Model.CuttingStatement.Worker.Name</td>
                    <td>@Model.CuttingStatement.Customer.Name</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="print-footer">
        <p>مصنع كسوة - نظام الإدارة المتكامل</p>
    </div>
</div>


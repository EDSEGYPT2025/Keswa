@page "{id:int}"
@model Keswa.Pages.Departments.PrintCuttingStatementModel
@{
    Layout = "/Pages/Shared/_PrintLayout.cshtml";
    ViewData["Title"] = $"طباعة بيان قص - {Model.CuttingStatement.RunNumber}";
}

<style>
    body {
        font-family: 'Tajawal', sans-serif;
        background-color: #fff;
        position: relative;
    }

    .print-container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        background-color: #fff;
        position: relative;
    }

    /* العلامة المائية */
    .watermark img {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 60%;
        height: 60%;
        transform: translate(-50%, -50%);
        object-fit: contain;
        opacity: 0.1;
        z-index: 0;
        pointer-events: none;
    }

    /* النصوص فوق العلامة المائية */
    .print-header, .print-section, .print-footer {
        position: relative;
        z-index: 1;
    }

    .print-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 2px solid #343a40;
        padding-bottom: 10px;
        margin-bottom: 15px;
    }

    .print-header .logo img {
        max-width: 80px; /* حجم أصغر لتوفير مساحة */
        height: auto;
    }

    .print-header .title {
        text-align: right;
    }

    .print-header h1 {
        margin: 0;
        font-size: 24px;
        font-weight: 700;
    }

    .print-section {
        margin-bottom: 20px;
    }

    .details-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px 20px;
    }

    .detail-item {
        display: flex;
        padding: 5px 10px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    .detail-item dt {
        font-weight: bold;
        min-width: 120px;
    }

    .detail-item dd {
        margin: 0;
        padding-left: 5px;
    }

    .print-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    .print-table th, .print-table td {
        border: 1px solid #dee2e6;
        padding: 8px;
        text-align: right;
    }

    .print-table thead {
        background-color: #e9ecef;
    }

    .summary-grid {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
    }

    .summary-item {
        padding: 5px 10px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: #e2e6ea;
        font-weight: bold;
    }

    .print-footer {
        margin-top: 40px;
        text-align: center;
        font-size: 14px;
        color: #6c757d;
    }

    .print-button-container {
        text-align: center;
        margin: 20px 0;
    }

    @@media print {
        .no-print {
            display: none !important;
        }

        body, .print-container {
            margin: 0;
            padding: 0;
            border: none;
            box-shadow: none;
        }
    }
</style>

<div class="print-button-container no-print">
    <button onclick="window.print()" class="btn btn-primary"><i class="bi bi-printer-fill me-2"></i>طباعة البيان</button>
</div>

<div class="print-container">
    <!-- العلامة المائية -->
    <div class="watermark">
        <img src="~/images/logo.png" alt="Logo" />
    </div>

    <!-- رأس التقرير -->
    <div class="print-header">
        <div class="logo">
            <img src="~/images/logo.png" alt="شعار مصنع كسوة">
        </div>
        <div class="title">
            <h1>بيان قص</h1>
            <p>رقم التشغيل: @Model.CuttingStatement.RunNumber</p>
        </div>
    </div>

    <!-- بيانات أمر الشغل -->
    <div class="print-section">
        <div class="details-grid">
            <div class="detail-item"><dt>رقم أمر الشغل:</dt> <dd>@Model.CuttingStatement.WorkOrder.WorkOrderNumber</dd></div>
            <div class="detail-item"><dt>تاريخ الإنشاء:</dt> <dd>@Model.CuttingStatement.WorkOrder.CreationDate.ToShortDateString()</dd></div>
            <div class="detail-item"><dt>الموديل:</dt> <dd>@Model.CuttingStatement.WorkOrder.Product.Name</dd></div>
            <div class="detail-item"><dt>الكمية الإجمالية:</dt> <dd>@Model.CuttingStatement.WorkOrder.QuantityToProduce قطعة</dd></div>
        </div>

        <!-- ملخص المتراج والعدد الفعلي -->
        <div class="summary-grid">
            <div class="summary-item">إجمالي المتراج: @Model.CuttingStatement.Meterage</div>
            <div class="summary-item">العدد الفعلي: @Model.CuttingStatement.Count</div>
        </div>
    </div>

    <!-- جدول التفاصيل -->
    <div class="print-section">
        <table class="print-table">
            <thead>
                <tr>
                    <th>الخامة</th>
                    <th>اللون</th>
                    <th>المتراج المستخدم</th>
                    <th>العدد المقصوص</th>
                    <th>العامل</th>
                    <th>العميل</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.CuttingStatement.Material.Name</td>
                    <td>@Model.CuttingStatement.Material.Color?.Name</td>
                    <td>@Model.CuttingStatement.Meterage</td>
                    <td>@Model.CuttingStatement.Count</td>
                    <td>@Model.CuttingStatement.Worker.Name</td>
                    <td>@Model.CuttingStatement.Customer.Name</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="print-footer">
        <p>مصنع كسوة - نظام الإدارة المتكامل</p>
    </div>
</div>

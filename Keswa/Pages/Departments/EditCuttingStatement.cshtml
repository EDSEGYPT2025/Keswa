@page "{id:int}"
@model Keswa.Pages.Departments.EditCuttingStatementModel
@{
    ViewData["Title"] = "تعديل بيان قص";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">تعديل بيانات بيان القص رقم @Model.CuttingStatement.RunNumber لأمر الشغل @Model.CuttingStatement.WorkOrder.WorkOrderNumber</p>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="CuttingStatement.Id" />
            <input type="hidden" asp-for="CuttingStatement.WorkOrderId" />
            <input type="hidden" asp-for="CuttingStatement.RunNumber" />
            <input type="hidden" asp-for="CuttingStatement.MaterialId" />
            <input type="hidden" asp-for="CuttingStatement.ProductId" />
            <input type="hidden" asp-for="CuttingStatement.CustomerId" />
            <input type="hidden" asp-for="CuttingStatement.Color" />
            <input type="hidden" asp-for="CuttingStatement.StatementDate" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">الموديل</label>
                    <input class="form-control" value="@Model.CuttingStatement.Product.Name" readonly style="background-color: #e9ecef;" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">العميل</label>
                    <input class="form-control" value="@Model.CuttingStatement.Customer.Name" readonly style="background-color: #e9ecef;" />
                </div>
                <div class="col-md-12">
                    <label class="form-label">الخامة</label>
                    <input class="form-control" value="@(Model.CuttingStatement.Material.Name + (Model.CuttingStatement.Material.Color != null ? $" - {Model.CuttingStatement.Material.Color.Name}" : ""))" readonly style="background-color: #e9ecef;" />
                </div>

                <div class="col-md-12">
                    <label class="form-label">الكمية المتاحة للتعديل (المتبقي + قيمة البيان الحالي)</label>
                    <input id="available-quantity" class="form-control" value="@Model.AvailableQuantity.ToString("F2")" readonly style="background-color: #e0f2f1; color: #00695c; font-weight: bold;" />
                </div>

                <div class="col-md-6">
                    <label asp-for="CuttingStatement.Meterage" class="form-label"></label>
                    <input asp-for="CuttingStatement.Meterage" id="meterage-input" class="form-control" type="number" step="any" min="0.01" />
                    <span asp-validation-for="CuttingStatement.Meterage" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CuttingStatement.Count" class="form-label"></label>
                    <input asp-for="CuttingStatement.Count" class="form-control" type="number" min="1" />
                    <span asp-validation-for="CuttingStatement.Count" class="text-danger"></span>
                </div>

                <div id="meterage-validation-warning" class="col-12" style="display: none;">
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            <strong>تحذير!</strong> الكمية المدخلة أكبر من الكمية المتاحة.
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <label asp-for="CuttingStatement.WorkerId" class="form-label"></label>
                    <select asp-for="CuttingStatement.WorkerId" class="form-select searchable-select" asp-items="Model.WorkerList"></select>
                    <span asp-validation-for="CuttingStatement.WorkerId" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />

            <div class="d-flex justify-content-end">
                <a asp-page="/Departments/Cutting" asp-route-id="@Model.CuttingStatement.WorkOrderId" class="btn btn-outline-secondary me-2">إلغاء</a>
                <button type="submit" id="save-button" class="btn btn-primary">حفظ التعديلات</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            const meterageInput = $('#meterage-input');
            const availableQtyInput = $('#available-quantity');
            const saveButton = $('#save-button');
            const validationWarning = $('#meterage-validation-warning');

            function validateMeterage() {
                const availableQty = parseFloat(availableQtyInput.val());
                const currentMeterage = parseFloat(meterageInput.val());

                if (isNaN(availableQty) || isNaN(currentMeterage)) {
                    validationWarning.hide();
                    meterageInput.removeClass('is-invalid');
                    saveButton.prop('disabled', false);
                    return;
                }

                if (currentMeterage > availableQty) {
                    validationWarning.show();
                    meterageInput.addClass('is-invalid');
                    saveButton.prop('disabled', true);
                } else {
                    validationWarning.hide();
                    meterageInput.removeClass('is-invalid');
                    saveButton.prop('disabled', false);
                }
            }

            // استدعاء الدالة عند الكتابة في حقل المتراج
            meterageInput.on('input', validateMeterage);
        });
    </script>
}
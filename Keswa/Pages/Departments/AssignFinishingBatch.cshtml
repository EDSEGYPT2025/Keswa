@page "{finishingBatchId:int}"
@model Keswa.Pages.Departments.AssignFinishingBatchModel
@{
    ViewData["Title"] = "تسليم تشغيلة تشطيب";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                تفاصيل التشغيلة
            </div>
            <div class="card-body">
                <p><strong>رقم التشغيلة:</strong> @Model.BatchToAssign.FinishingBatchNumber</p>
                <p><strong>المنتج:</strong> @Model.BatchToAssign.WorkOrder.Product.Name</p>
                <p><strong>الكمية الإجمالية:</strong> @Model.BatchToAssign.Quantity</p>
                <p><strong>الكمية المتبقية للتسليم:</strong> @Model.RemainingQuantityInBatch</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Input.FinishingBatchId" />

            <div class="mb-3">
                <label asp-for="Input.WorkerId" class="form-label"></label>
                <select asp-for="Input.WorkerId" class="form-control" asp-items="Model.Workers">
                    <option value="">-- اختر عامل --</option>
                </select>
                <span asp-validation-for="Input.WorkerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.AssignedQuantity" class="form-label"></label>
                <input asp-for="Input.AssignedQuantity" class="form-control" readonly />
                <span asp-validation-for="Input.AssignedQuantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">تسليم</button>
                <a asp-page="./Finishing" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

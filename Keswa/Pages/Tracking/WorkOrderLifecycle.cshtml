@page "{workOrderId:int}"
@using Keswa.Enums
@model Keswa.Pages.Tracking.WorkOrderLifecycleModel
@{
    ViewData["Title"] = "دورة حياة أمر الشغل";
}

<style>
    .timeline {
        position: relative;
        padding: 20px 0;
    }

        .timeline::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50px; /* Adjust based on icon size */
            height: 100%;
            width: 4px;
            background: #e9ecef;
            border-radius: 2px;
        }

    .timeline-item {
        margin-bottom: 20px;
        position: relative;
    }

        .timeline-item .timeline-icon {
            position: absolute;
            left: 28px; /* Center icon on the line */
            top: 0;
            z-index: 1;
            background: #fff;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            text-align: center;
            line-height: 45px;
            font-size: 1.5rem;
            border: 3px solid #e9ecef;
        }

        .timeline-item .timeline-content {
            margin-left: 90px;
            padding: 15px;
            background: #fff;
            border: 1px solid #dee2e6;
            border-radius: .375rem;
        }

    .timeline-content h5 {
        font-weight: 700;
        margin-bottom: 5px;
    }

    .timeline-content .time {
        font-size: 0.9rem;
        color: #6c757d;
        font-weight: 500;
    }

    .details-list {
        list-style: none;
        padding-left: 0;
        margin-top: 10px;
    }

        .details-list li {
            padding: 5px 0;
            border-bottom: 1px solid #f1f1f1;
        }

            .details-list li:last-child {
                border-bottom: none;
            }
</style>

<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="h2 fw-bold">@ViewData["Title"]: @Model.WorkOrder.WorkOrderNumber</h1>
        <p class="text-muted">تتبع كامل لمراحل أمر الشغل من البداية إلى النهاية.</p>
    </div>
    <a asp-page="/WorkOrders/Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-right me-2"></i>العودة لقائمة الأوامر</a>
</div>


<div class="timeline">
    <div class="timeline-item">
        <div class="timeline-icon text-primary"><i class="bi bi-file-earmark-text"></i></div>
        <div class="timeline-content">
            <p class="time">@Model.WorkOrder.CreationDate.ToString("dd MMMM yyyy, hh:mm tt")</p>
            <h5>إنشاء أمر الشغل</h5>
            <p>
                تم إنشاء أمر الشغل للموديل <strong>@Model.WorkOrder.Product.Name</strong> بكمية إجمالية <strong>@Model.WorkOrder.QuantityToProduce قطعة</strong>.
                الحالة الحالية: <span class="badge bg-primary">@Model.WorkOrder.Status</span>
            </p>
        </div>
    </div>

    @foreach (var cs in Model.CuttingStatements)
    {
        <div class="timeline-item">
            <div class="timeline-icon text-info"><i class="bi bi-rulers"></i></div>
            <div class="timeline-content">
                <p class="time">@cs.StatementDate.ToString("dd MMMM yyyy, hh:mm tt")</p>
                <h5>عملية قص: <strong>@cs.RunNumber</strong></h5>
                <ul class="details-list">
                    <li><strong>الكمية المقصوصة:</strong> @cs.Count قطعة</li>
                    <li><strong>العامل:</strong> @cs.Worker?.Name</li>
                    <li>
                        <strong>الحالة:</strong>
                        @if (cs.Status == BatchStatus.Transferred)
                        {
                            <span class="badge bg-success">تم التحويل للخياطة</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">قيد القص</span>
                        }
                    </li>
                </ul>
            </div>
        </div>
    }

    @foreach (var sbViewModel in Model.SewingBatches)
    {
        var sewingBatch = sbViewModel.SewingBatch;
        <div class="timeline-item">
            <div class="timeline-icon text-warning"><i class="bi bi-scissors"></i></div>
            <div class="timeline-content">
                <p class="time">@sewingBatch.CreationDate.ToString("dd MMMM yyyy, hh:mm tt")</p>
                <h5>تشغيلة خياطة: <strong>@sewingBatch.SewingBatchNumber</strong></h5>

                @if (sewingBatch.WorkerAssignments.Any())
                {
                    <p class="mt-3"><strong>تفاصيل تسليمات العمال:</strong></p>
                    <ul class="details-list">
                        @foreach (var assignment in sewingBatch.WorkerAssignments)
                        {
                            <li>
                                <div>
                                    <i class="bi bi-person me-1"></i> <strong>العامل:</strong> @assignment.Worker.Name
                                    <span class="badge bg-light text-dark float-end">@assignment.Status</span>
                                </div>
                                <div class="ps-3">
                                    <small>
                                        الكمية: @assignment.AssignedQuantity |
                                        الناتج: <span class="text-success fw-bold">@assignment.ReceivedQuantity سليم</span>, <span class="text-danger fw-bold">@assignment.ScrappedQuantity هالك</span>
                                    </small>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mt-2">لم يتم تسليم هذه التشغيلة لأي عامل بعد.</p>
                }
            </div>
        </div>
    }

</div>
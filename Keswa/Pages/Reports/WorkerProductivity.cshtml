@page
@model Keswa.Pages.Reports.WorkerProductivityModel
@{
    ViewData["Title"] = "تقرير إنتاجية العمال";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض وتحليل إنتاجية العمال بناءً على الفلاتر المحددة.</p>
</div>

<!-- Filters Card -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label asp-for="StartDate" class="form-label">من تاريخ</label>
                    <input asp-for="StartDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="EndDate" class="form-label">إلى تاريخ</label>
                    <input asp-for="EndDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="SelectedWorkerId" class="form-label">العامل</label>
                    <select asp-for="SelectedWorkerId" class="form-select searchable-select" asp-items="Model.WorkerList">
                        <option value="">-- كل العمال --</option>
                    </select>
                </div>
                <div class="col-md-12 text-end mt-3">
                    <a asp-page="./WorkerProductivity" class="btn btn-outline-secondary">إعادة تعيين</a>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-funnel-fill me-2"></i>تطبيق الفلتر</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Report Results Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>اسم العامل</th>
                        <th>القسم</th>
                        <th class="text-center">إجمالي الإنتاج (قطعة)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductivityReport)
                    {
                        <tr>
                            <td><strong>@item.WorkerName</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Department)</td>
                            <td class="text-center fw-bold">@item.TotalQuantityProduced</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

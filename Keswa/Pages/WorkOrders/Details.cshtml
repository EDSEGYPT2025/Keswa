        }
        <a asp-page="./Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-right me-2"></i>العودة للقائمة</a>
    </div>*@
</div>

<!-- Main Work Order Info -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">رقم أمر الشغل</dt>
            <dd class="col-sm-9"><strong>@Model.WorkOrder.WorkOrderNumber</strong></dd>

            <dt class="col-sm-3">الموديل</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkOrder.Product.Name)</dd>

            <dt class="col-sm-3">الكمية المطلوبة</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.WorkOrder.QuantityToProduce) قطعة</dd>

            <dt class="col-sm-3">الحالة</dt>
            <dd class="col-sm-9">
                <span class="status-indicator status-@Model.WorkOrder.Status.ToString().ToLower()">
                    @Html.DisplayFor(model => model.WorkOrder.Status)
                </span>
            </dd>
        </dl>
    </div>
</div>

<!-- *** القسم الأول: طلبات الصرف *** -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-transparent border-0 pt-3 d-flex justify-content-between align-items-center">
        <h5 class="fw-bold mb-0">طلبات صرف المواد الخام</h5>
        <a asp-page="/MaterialRequisitions/Create" asp-route-workOrderId="@Model.WorkOrder.Id" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle me-2"></i>إنشاء طلب صرف جديد
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-light">
                    <tr>
                        <th>رقم الطلب</th>
                        <th>تاريخ الطلب</th>
                        <th>الحالة</th>
                        <th>ملاحظات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.MaterialRequisitions.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">لم يتم إنشاء أي طلبات صرف لهذا الأمر.</td>
                        </tr>
                    }
                    @foreach (var req in Model.MaterialRequisitions)
                    {
                        <tr>
                            <td><strong>@req.Id</strong></td>
                            <td>@req.RequestDate.ToShortDateString()</td>
                            <td>
                                @if (req.Status == Keswa.Enums.RequisitionStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">@Html.DisplayFor(m => req.Status)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Html.DisplayFor(m => req.Status)</span>
                                }
                            </td>
                            <td>@req.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- *** القسم الثاني: أذونات الصرف المنفذة *** -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-header bg-transparent border-0 pt-3">
        <h5 class="fw-bold mb-0">أذونات الصرف المنفذة</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="table-light">
                    <tr>
                        <th>رقم الإذن</th>
                        <th>المخزن</th>
                        <th>تاريخ الصرف</th>
                        <th>ملاحظات</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.MaterialIssuanceNotes.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">لم يتم تنفيذ أي أذونات صرف لهذا الأمر.</td>
                        </tr>
                    }
                    @foreach (var note in Model.MaterialIssuanceNotes)
                    {
                        <tr>
                            <td><strong>@note.IssuanceNumber</strong></td>
                            <td>@note.Warehouse.Name</td>
                            <td>@note.IssuanceDate.ToShortDateString()</td>
                            <td>@note.Notes</td>
                            <td>
                                <a asp-page="/MaterialIssuances/Details" asp-route-id="@note.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


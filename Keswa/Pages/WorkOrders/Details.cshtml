        <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted">عرض التفاصيل الكاملة لأمر الشغل رقم: @Model.WorkOrder.WorkOrderNumber</p>
    </div>
    @*<div>
        @if (Model.WorkOrder.Status != Keswa.Enums.WorkOrderStatus.Completed)
        {
            <a asp-page="./Receive" asp-route-id="@Model.WorkOrder.Id" class="btn btn-success"><i class="bi bi-check2-circle me-2"></i>إكمال واستلام المنتج</a>
        }

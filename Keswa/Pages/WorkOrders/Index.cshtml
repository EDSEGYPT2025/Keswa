@page
@model Keswa.Pages.WorkOrders.IndexModel
@{
    ViewData["Title"] = "إدارة أوامر الشغل";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted">عرض وتتبع جميع أوامر الشغل في النظام.</p>
    </div>
    <div>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>إنشاء أمر شغل جديد</a>
    </div>
</div>

<!-- Search Bar -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-center">
                <div class="col">
                    <input asp-for="SearchTerm" class="form-control" placeholder="ابحث برقم الأمر أو اسم الموديل..." />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary"><i class="bi bi-search me-2"></i>بحث</button>
                </div>
                <div class="col-auto">
                    <a asp-page="./Index" class="btn btn-outline-secondary">عرض الكل</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Work Orders Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.WorkOrders[0].WorkOrderNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.WorkOrders[0].Product)</th>
                        <th>@Html.DisplayNameFor(model => model.WorkOrders[0].QuantityToProduce)</th>
                        <th>@Html.DisplayNameFor(model => model.WorkOrders[0].CreationDate)</th>
                        <th>@Html.DisplayNameFor(model => model.WorkOrders[0].Status)</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.WorkOrders)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.WorkOrderNumber)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.QuantityToProduce)</td>
                            <td>@item.CreationDate.ToShortDateString()</td>
                            <td>
                                @{
                                    string statusClass = "";
                                    switch (item.Status)
                                    {
                                        case Keswa.Enums.WorkOrderStatus.New:
                                            statusClass = "status-new";
                                            break;
                                        case Keswa.Enums.WorkOrderStatus.InProgress:
                                            statusClass = "status-inprogress";
                                            break;
                                        case Keswa.Enums.WorkOrderStatus.Completed:
                                            statusClass = "status-completed";
                                            break;
                                        case Keswa.Enums.WorkOrderStatus.Cancelled:
                                            statusClass = "status-cancelled";
                                            break;
                                    }
                                }
                                <span class="status-badge @statusClass">
                                    <span class="status-dot"></span>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span>
                            </td>
                            <td>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye me-1"></i> عرض</a>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i> تعديل</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage - 1)">السابق</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./Index"
                               asp-route-SearchTerm="@Model.SearchTerm"
                               asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage + 1)">التالي</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@page "{id:int}"
@model Keswa.Pages.PurchaseOrders.PrintModel
@{
    Layout = "/Pages/Shared/_PrintLayout.cshtml";
    ViewData["Title"] = $"أمر شراء - {Model.PurchaseOrder.OrderNumber}";
}

<div class="d-flex justify-content-end mb-3 no-print">
    <button onclick="window.print()" class="btn btn-primary">طباعة</button>
</div>

<div class="card border-2">
    <div class="card-body p-5">
        <header class="row mb-5">
            <div class="col-6">
                <h1 class="h3">أمر شراء</h1>
                <h2 class="h1 fw-bold text-primary">Purchase Order</h2>
            </div>
            <div class="col-6 text-start">
                <h3 class="fw-bold">مصنع كسوة</h3>
                <p class="text-muted mb-0">
                    العنوان: القاهرة، جمهورية مصر العربية<br>
                    الهاتف: 0123456789
                </p>
            </div>
        </header>

        <section class="row mb-5">
            <div class="col-12">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light w-25">رقم أمر الشراء</th>
                            <td>@Model.PurchaseOrder.OrderNumber</td>
                            <th class="bg-light w-25">تاريخ الطلب</th>
                            <td>@Model.PurchaseOrder.OrderDate.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th class="bg-light">مرتبط بأمر الشغل</th>
                            <td colspan="3">@(Model.PurchaseOrder.WorkOrder?.WorkOrderNumber ?? "لا يوجد")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <section>
            <h4 class="mb-3">تفاصيل المواد المطلوبة:</h4>
            <table class="table table-striped">
                <thead class="bg-dark text-white">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">اسم المادة</th>
                        <th scope="col" class="text-center">الكمية المطلوبة</th>
                        <th scope="col" class="text-center">وحدة القياس</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var (item, index) in Model.PurchaseOrder.Details.Select((value, i) => (value, i)))
                    {
                        <tr>
                            <th scope="row">@(index + 1)</th>
                            <td>@item.Material.Name</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.Material.Unit)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

        @*<footer class="mt-5 pt-5">
            <div class="row">
                <div class="col-6">
                    <p class="fw-bold">توقيع مدير المشتريات:</p>
                    <hr style="border-top: 2px dotted #333;" />
                </div>
                <div class="col-6">
                    <p class="fw-bold">توقيع مدير المخازن:</p>
                    <hr style="border-top: 2px dotted #333;" />
                </div>
            </div>
        </footer>*@
    </div>
</div>


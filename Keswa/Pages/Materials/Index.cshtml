@page
@model Keswa.Pages.Materials.IndexModel
@{
    ViewData["Title"] = "إدارة المواد الخام";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted">عرض وإدارة قائمة المواد الخام الرئيسية في النظام.</p>
    </div>
    <div>
        <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>إضافة مادة جديدة</a>
    </div>
</div>

<!-- Search Bar -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-center">
                <div class="col">
                    <input asp-for="SearchTerm" class="form-control" placeholder="ابحث باسم المادة..." />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary"><i class="bi bi-search me-2"></i>بحث</button>
                </div>
                <div class="col-auto">
                    <a asp-page="./Index" class="btn btn-outline-secondary">عرض الكل</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Materials Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Materials[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Materials[0].Unit)</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Materials)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.Name)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                                <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage - 1)">السابق</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./Index"
                               asp-route-SearchTerm="@Model.SearchTerm"
                               asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./Index"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-CurrentPage="@(Model.CurrentPage + 1)">التالي</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

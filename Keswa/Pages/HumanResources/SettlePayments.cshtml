@page
@model Keswa.Pages.HumanResources.SettlePaymentsModel
@{
    ViewData["Title"] = "تسوية حسابات العمال";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">تسجيل الدفعات ومتابعة أرصدة العمال.</p>
</div>

<form method="get">
    <div class="row g-3 align-items-end mb-4">
        <div class="col-md-9">
            <label class="form-label">اختر العامل</label>
            <select name="WorkerId" class="form-select" asp-items="Model.WorkersList" onchange="this.form.submit()">
                <option value="">-- اختر عامل --</option>
            </select>
        </div>
    </div>
</form>

@if (Model.Worker != null)
{
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0 fw-bold">كشف حساب مختصر للعامل: @Model.Worker.Name</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr class="fs-5">
                                <td class="w-50">إجمالي المستحقات (من الإنتاج)</td>
                                <td class="text-end text-success fw-bold">@Model.TotalEarnings.ToString("N2") ج.م</td>
                            </tr>
                            <tr class="fs-5">
                                <td>إجمالي المدفوعات السابقة</td>
                                <td class="text-end text-danger fw-bold">@Model.TotalPaid.ToString("N2") ج.م</td>
                            </tr>
                            <tr class="fs-4 table-primary">
                                <td class="fw-bolder">الرصيد الحالي المستحق</td>
                                <td class="text-end fw-bolder">@Model.BalanceDue.ToString("N2") ج.م</td>
                            </tr>
                        </tbody>
                    </table>

                    <h6 class="mt-4">تفاصيل التشغيلات المكتملة:</h6>
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <th>رقم التشغيلة</th>
                                <th>تاريخ الإنجاز</th>
                                <th class="text-end">المبلغ المستحق</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CompletedAssignments)
                            {
                                <tr>
                                    <td>@item.AssignmentNumber</td>
                                    <td>@item.AssignedDate.ToShortDateString()</td>
                                    <td class="text-end">@item.Earnings.ToString("N2") ج.م</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0 fw-bold">تسجيل دفعة جديدة</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="WorkerId" />
                        <div class="mb-3">
                            <label asp-for="PaymentAmount" class="form-label"></label>
                            <input asp-for="PaymentAmount" class="form-control" />
                            <span asp-validation-for="PaymentAmount" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PaymentNotes" class="form-label"></label>
                            @*<textarea asp-for="PaymentNotes" class="form-control" rows="3"></textarea>*@
                            <textarea asp-for="PaymentNotes" class="form-control" rows="3">لا يوجد ملاحظات</textarea>

                        </div>
                        <button type="submit" class="btn btn-success w-100">تسجيل الدفعة</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
@page
@model Keswa.Pages.Administration.AuditLogModel
@{
    ViewData["Title"] = "سجل المراجعة";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض وتتبع جميع العمليات الهامة التي تم تسجيلها في النظام.</p>
</div>

<!-- Filters Card -->
<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <form method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">من تاريخ</label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">بحث</label>
                    <input asp-for="SearchTerm" class="form-control" placeholder="ابحث باسم المستخدم، العملية، أو الشاشة..." />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">تطبيق</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Report Results Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>التاريخ والوقت</th>
                        <th>اسم المستخدم</th>
                        <th>الشاشة</th>
                        <th>العملية</th>
                        <th>التفاصيل</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AuditLogs)
                    {
                        <tr>
                            <td>@item.Timestamp.ToString("yyyy/MM/dd hh:mm tt")</td>
                            <td>@item.UserName</td>
                            <td>@item.ScreenName</td>
                            <td>@item.Action</td>
                            <td>@item.Details</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination Controls -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mt-4">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./AuditLog"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                           asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           asp-route-CurrentPage="@(Model.CurrentPage - 1)">السابق</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-page="./AuditLog"
                               asp-route-SearchTerm="@Model.SearchTerm"
                               asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                               asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                               asp-route-CurrentPage="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" asp-page="./AuditLog"
                           asp-route-SearchTerm="@Model.SearchTerm"
                           asp-route-StartDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                           asp-route-EndDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           asp-route-CurrentPage="@(Model.CurrentPage + 1)">التالي</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

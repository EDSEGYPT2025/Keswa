@page
@model Keswa.Pages.SalesOrders.CreateModel
@{
    ViewData["Title"] = "إنشاء طلبية جديدة";
}

<!-- Page Header -->
<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">أدخل بيانات الطلبية والموديلات المطلوبة.</p>
</div>

<form method="post">
    <!-- Main Document Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="SalesOrder.CustomerId" class="form-label"></label>
                    <select asp-for="SalesOrder.CustomerId" class="form-select searchable-select" asp-items="Model.CustomerList">
                        <option value="">-- اختر العميل --</option>
                    </select>
                    <span asp-validation-for="SalesOrder.CustomerId" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="SalesOrder.OrderDate" class="form-label"></label>
                    <input asp-for="SalesOrder.OrderDate" class="form-control" />
                    <span asp-validation-for="SalesOrder.OrderDate" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="SalesOrder.ExpectedDeliveryDate" class="form-label"></label>
                    <input asp-for="SalesOrder.ExpectedDeliveryDate" class="form-control" />
                    <span asp-validation-for="SalesOrder.ExpectedDeliveryDate" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Document Details -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h5 class="fw-bold mb-0">تفاصيل الموديلات</h5>
            <button type="button" id="add-item-btn" class="btn btn-sm btn-outline-success">
                <i class="bi bi-plus-circle me-2"></i>إضافة موديل
            </button>
        </div>
        <div class="card-body">
            <span asp-validation-for="SalesOrder.Details" class="text-danger d-block mb-2"></span>
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60%;">الموديل</th>
                        <th style="width: 30%;">الكمية المطلوبة</th>
                        <th style="width: 10%;"></th>
                    </tr>
                </thead>
                <tbody id="items-container">
                    <tr class="no-items">
                        <td colspan="3" class="text-center text-muted">لم يتم إضافة أي موديل بعد</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-end mt-3">
                <strong>إجمالي الكميات: <span id="totalQuantity">0</span></strong>
            </div>
        </div>
    </div>

    <hr class="my-4" />
    <div class="d-flex justify-content-end">
        <a asp-page="Index" class="btn btn-outline-secondary me-2">إلغاء</a>
        <button type="submit" class="btn btn-primary">حفظ الطلبية</button>
    </div>
</form>

<!-- Template for new item row (hidden) -->
<table style="display: none;">
    <tbody id="item-template">
        <tr>
            <td>
                <select name="SalesOrder.Details[0].ProductId" class="form-select item-product searchable-select">
                    <option value="">-- اختر الموديل --</option>
                    @foreach (var item in Model.ProductList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </td>
            <td>
                <input type="number" name="SalesOrder.Details[0].Quantity" class="form-control item-quantity" value="1" min="1" step="1" />
            </td>
            <td>
                <button type="button" class="btn btn-sm btn-outline-danger remove-item-btn"><i class="bi bi-trash"></i></button>
            </td>
        </tr>
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // تحسين شكل الجدول
            $(".table tbody").on("mouseenter", "tr", function () {
                $(this).css("background-color", "#f9f9f9");
            }).on("mouseleave", "tr", function () {
                $(this).css("background-color", "");
            });

            // تفعيل Select2 للـ select الثابتة فقط (العملاء مثلاً)
            $('select[name="SalesOrder.CustomerId"]').select2({
                theme: "bootstrap-5",
                dir: "rtl",
                placeholder: '-- اختر العميل --',
                width: '100%'
            });

            const templateRow = $('#item-template tr').first();

            // إعادة الترتيب
            function reindexItems() {
                let currentIndex = 0;
                $('#items-container tr').each(function () {
                    $(this).find('select, input').each(function () {
                        if (this.name && this.name.indexOf("Details[") !== -1) {
                            this.name = this.name.replace(/Details\[\d+\]/g, 'Details[' + currentIndex + ']');
                        }
                        if (this.id && this.id.indexOf("Details_") !== -1) {
                            this.id = this.id.replace(/Details_\d+__/g, 'Details_' + currentIndex + '__');
                        }
                    });
                    currentIndex++;
                });
            }

            // عرض رسالة الجدول الفاضي
            function toggleNoItemsMessage() {
                if ($('#items-container tr').length === 0) {
                    $('#items-container').append(`
                            <tr class="no-items">
                                <td colspan="3" class="text-center text-muted">لم يتم إضافة أي موديل بعد</td>
                            </tr>
                        `);
                } else {
                    $('#items-container .no-items').remove();
                }
                calculateTotalQuantity();
            }

            // حساب إجمالي الكمية
            function calculateTotalQuantity() {
                let total = 0;
                $('#items-container .item-quantity').each(function () {
                    total += parseInt($(this).val()) || 0;
                });
                $('#totalQuantity').text(total);
            }

            // إضافة صف جديد
            function addItemRow() {
                let newRow = templateRow.clone();
                $('#items-container').append(newRow);

                // تفعيل Select2 للـ select الجديد
                newRow.find('.searchable-select').select2({
                    theme: "bootstrap-5",
                    dir: "rtl",
                    placeholder: '-- اختر الموديل --',
                    width: '100%'
                });

                reindexItems();
                toggleNoItemsMessage();
            }

            // زر إضافة موديل
            $('#add-item-btn').click(addItemRow);

            // حذف صف
            $('#items-container').on('click', '.remove-item-btn', function () {
                $(this).closest('tr').find('.searchable-select').select2('destroy');
                $(this).closest('tr').remove();
                reindexItems();
                toggleNoItemsMessage();
            });

            // إضافة صف جديد عند الضغط على Enter في الكمية
            $('#items-container').on('keypress', '.item-quantity', function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#add-item-btn').click();
                }
            });

            // حساب الإجمالي عند تعديل الكمية
            $('#items-container').on('input', '.item-quantity', calculateTotalQuantity);

            // استدعاء مبدئي
            toggleNoItemsMessage();

            // ✅ إضافة صف أول بشكل تلقائي
            addItemRow();
        });
    </script>
}

@* --- FILENAME: Pages/Shared/_LoginPartial.cshtml --- *@

@using Microsoft.AspNetCore.Identity
@using Keswa.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">أهلاً بك، @UserManager.GetUserAsync(User).Result?.FullName!</a>
            <span class="nav-link text-muted px-1">|</span>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link">تسجيل الخروج</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">إنشاء حساب</a>
            <span class="nav-link text-muted px-1">|</span>
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">تسجيل الدخول</a>
        </li>
    }
</ul>

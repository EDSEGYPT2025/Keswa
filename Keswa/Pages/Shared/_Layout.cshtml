<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام كسوة ERP</title>

    <!-- Google Fonts: Tajawal -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Tajawal', sans-serif;
            background-color: #f8f9fa;
        }

        .app-container {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Sidebar */
        .app-sidebar {
            width: 250px;
            background: #fff;
            border-left: 1px solid #ddd;
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            z-index: 1050;
            overflow-y: auto;
            box-shadow: -2px 0 12px rgba(0,0,0,0.1);
            transform: translateX(0);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .app-sidebar.closed {
            transform: translateX(100%);
            box-shadow: none;
        }

        .sidebar-header {
            padding: 1rem;
            text-align: center;
        }

        .sidebar-logo {
            max-width: 120px;
            height: auto;
            border-radius: 8px;
        }

        .sidebar-nav {
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .sidebar-nav .nav-link {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 0.75rem 1rem;
            color: #333;
            transition: background 0.2s;
        }

        .sidebar-nav .nav-link:hover {
            background: #f1f1f1;
            text-decoration: none;
        }

        .nav-section-title {
            font-size: 0.85rem;
            font-weight: bold;
            color: #666;
            padding: 0.5rem 1rem;
            margin-top: 1rem;
        }

        /* Main Content */
        .app-main {
            flex: 1;
            margin-right: 250px;
            transition: margin-right 0.3s ease;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .app-main.full-width {
            margin-right: 0;
        }

        .app-header {
            background: #fff;
            padding: 0.5rem 1rem;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
        }

        .app-content {
            flex: 1;
            padding: 1rem;
        }

        /* Overlay for mobile */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.3);
            z-index: 1040;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .app-sidebar {
                transform: translateX(100%);
            }
            .app-sidebar.open {
                transform: translateX(0);
            }
            .app-main {
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="app-sidebar closed" id="sidebar">
            <div class="sidebar-header">
                <img src="~/images/logo.png" alt="Logo" class="sidebar-logo">
            </div>
            <nav class="sidebar-nav">
                <a asp-page="/Index" class="nav-link"><i class="bi bi-speedometer2"></i><span>لوحة التحكم</span></a>
                <p class="nav-section-title">إدارة المخزون</p>
                <a asp-page="/Inventory/Index" class="nav-link"><i class="bi bi-shop"></i><span>المخازن</span></a>
                <a asp-page="/Materials/Index" class="nav-link"><i class="bi bi-rulers"></i><span>المواد الخام</span></a>
                <a asp-page="/Colors/Index" class="nav-link"><i class="bi bi-palette-fill"></i><span>إدارة الألوان</span></a>
                <a asp-page="/GoodsReceipts/Index" class="nav-link"><i class="bi bi-box-arrow-in-down"></i><span>سندات الاستلام</span></a>
                <a asp-page="/MaterialRequisitions/Index" class="nav-link"><i class="bi bi-clipboard-plus"></i><span>طلبات الصرف</span></a>

                <p class="nav-section-title">إدارة الإنتاج</p>
                <a asp-page="/Products/Index" class="nav-link"><i class="bi bi-box-seam"></i><span>إدارة الموديلات</span></a>
                <a asp-page="/WorkOrders/Index" class="nav-link"><i class="bi bi-clipboard-data"></i><span>أوامر الشغل</span></a>

                <p class="nav-section-title">متابعة الإنتاج</p>
                <a asp-page="/Departments/Cutting" class="nav-link"><i class="bi bi-scissors"></i><span>قسم القص</span></a>
                <a asp-page="/Departments/CuttingCompleted" class="nav-link"><i class="bi bi-check2-square"></i><span>القص المكتمل</span></a>

                <p class="nav-section-title">الموارد البشرية</p>
                <a asp-page="/Workers/Index" class="nav-link"><i class="bi bi-people-fill"></i><span>إدارة العمال</span></a>

                <p class="nav-section-title">إدارة المبيعات</p>
                <a asp-page="/Customers/Index" class="nav-link"><i class="bi bi-person-rolodex"></i><span>إدارة العملاء</span></a>
                <a asp-page="/SalesOrders/Index" class="nav-link"><i class="bi bi-receipt"></i><span>إدارة الطلبيات</span></a>

                <p class="nav-section-title">الإدارة</p>
                <a asp-page="/Administration/AuditLog" class="nav-link"><i class="bi bi-shield-lock-fill"></i><span>سجل المراجعة</span></a>
            </nav>
        </aside>

        <!-- Main -->
        <div class="app-main full-width" id="main">
            <header class="app-header">
                <button class="btn btn-icon btn-light" id="sidebar-toggle-btn">
                    <i class="bi bi-list"></i>
                </button>
                <div class="d-flex align-items-center ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </header>
            <main class="app-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد أنك تريد حذف العنصر: <strong id="deleteItemName"></strong>؟</p>
                    <p class="text-danger">لا يمكن التراجع عن هذا الإجراء.</p>
                </div>
                <div class="modal-footer">
                    <form method="post" id="deleteForm">
                        <input type="hidden" id="deleteItemId" name="id" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                        <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            const sidebar = $("#sidebar");
            const main = $("#main");

            function adjustSidebarOnLoad() {
                if (window.innerWidth >= 992) {
                    sidebar.removeClass("closed open");
                    main.removeClass("full-width");
                    $(".sidebar-overlay").remove();
                } else {
                    sidebar.removeClass("closed open");
                    sidebar.addClass("closed");
                    main.addClass("full-width");
                    $(".sidebar-overlay").remove();
                }
            }

            adjustSidebarOnLoad();
            $(window).resize(adjustSidebarOnLoad);

            // زر الفتح/الإغلاق
            $("#sidebar-toggle-btn").on("click", function () {
                if (window.innerWidth < 992) {
                    sidebar.toggleClass("open");
                    if (sidebar.hasClass("open")) {
                        $("body").append('<div class="sidebar-overlay"></div>');
                    } else {
                        $(".sidebar-overlay").remove();
                    }
                } else {
                    sidebar.toggleClass("closed");
                    main.toggleClass("full-width");
                }
            });

            // إغلاق السايدبار عند الضغط على overlay
            $(document).on("click", ".sidebar-overlay", function () {
                sidebar.removeClass("open");
                $(this).remove();
            });

            // إغلاق السايدبار عند اختيار أي رابط **على الموبايل فقط**
            $(".app-sidebar .nav-link").on("click", function () {
                if (window.innerWidth < 992) {
                    sidebar.removeClass("open");
                    $(".sidebar-overlay").remove();
                }
            });
        });
    </script>

    @* رسائل تنبيه *@
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <script>toastr.success('@Html.Raw(TempData["SuccessMessage"])');</script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <script>toastr.error('@Html.Raw(TempData["ErrorMessage"])');</script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

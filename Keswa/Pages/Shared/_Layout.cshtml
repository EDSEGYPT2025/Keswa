    @* --- قسم السكريبتات (يجب أن يكون في نهاية الصفحة) --- *@

    @* 1. المكتبات الخارجية (CDN) *@
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    @* 2. ملف الجافاسكريبت الرئيسي للمشروع *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* 3. السكريبتات المضمنة (Inline Scripts) الخاصة بالصفحة *@
    <script>
        $(document).ready(function () {
            // --- Sidebar Logic ---
            const sidebar = $("#sidebar");
            const main = $("#main");
            const overlay = $("#sidebar-overlay");
            const isDesktop = () => window.innerWidth >= 992;

            function applySidebarState() {
                if (isDesktop()) {
                    sidebar.removeClass("open");
                    overlay.removeClass("active");
                    if (localStorage.getItem('sidebarState') === 'collapsed') {
                        sidebar.addClass('collapsed');
                        main.addClass('full-width');
                    } else {
                        sidebar.removeClass('collapsed');
                        main.removeClass('full-width');
                    }
                } else {
                    sidebar.removeClass("collapsed").addClass("closed");
                    main.removeClass("full-width");
                }
            }

            $("#sidebar-toggle-btn").on("click", function () {
                if (isDesktop()) {
                    sidebar.toggleClass("collapsed");
                    main.toggleClass("full-width");
                    localStorage.setItem('sidebarState', sidebar.hasClass('collapsed') ? 'collapsed' : 'expanded');
                    if (sidebar.hasClass('collapsed')) {
                        $('.sidebar-nav .collapse.show').removeClass('show');
                        $('.sidebar-nav .menu-trigger').addClass('collapsed');
                    }
                } else {
                    sidebar.toggleClass("open closed");
                    overlay.toggleClass("active");
                }
            });

            overlay.on("click", () => {
                sidebar.removeClass("open").addClass("closed");
                overlay.removeClass("active");
            });

            $(".sidebar-nav .nav-link:not(.menu-trigger)").on("click", function () {
                if (!isDesktop() && sidebar.hasClass("open")) {
                    sidebar.removeClass("open").addClass("closed");
                    overlay.removeClass("active");
                }
            });

            var activeLink = $('.sidebar-nav .nested-menu .nav-link.active');
            if (activeLink.length > 0) {
                var parentCollapse = activeLink.closest('.collapse');
                if (parentCollapse.length > 0 && !sidebar.hasClass('collapsed')) {
                    new bootstrap.Collapse(parentCollapse[0], { toggle: true });
                }
            }

            applySidebarState();
            $(window).resize(applySidebarState);

            // --- Modal Logic ---
            var modalPlaceholder = $('#mainModal');
            var modalContent = modalPlaceholder.find('.modal-content');
            var loadingSpinner = `
                                    <div class="modal-body text-center p-5">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <p class="mt-3 text-muted">جاري تحميل البيانات...</p>
                                    </div>`;

            $('body').on('click', '.modal-btn', function (event) {
                event.preventDefault();
                var url = $(this).attr('href');

                modalContent.html(loadingSpinner);
                modalPlaceholder.modal('show');

                modalContent.load(url, function (response, status, xhr) {
                    if (status == "error") {
                        console.error("Error loading modal. Status:", xhr.status, "Message:", xhr.statusText);
                        modalPlaceholder.modal('hide');
                        toastr.error("حدث خطأ أثناء تحميل البيانات.");
                    } else {
                        // الكود النهائي لتفعيل محتوى الشاشة المنبثقة
                        var form = modalContent.find('form');
                        if (form.length > 0) {
                            $.validator.unobtrusive.parse(form);
                        }

                        var workerSelect = modalContent.find('#workerSelect');
                        if (workerSelect.length > 0) {
                            workerSelect.select2({
                                theme: 'bootstrap-5',
                                dropdownParent: $('#mainModal')
                            });
                        }
                    }
                });
            });

            modalPlaceholder.on('hidden.bs.modal', function () {
                modalContent.empty();
            });
        });
    </script>

    @* 4. سكريبتات رسائل النجاح والخطأ (TempData) *@
    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
    {
        <script>toastr.success('@Html.Raw(TempData["SuccessMessage"])');</script>
    }
    @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
    {
        <script>toastr.error('@Html.Raw(TempData["ErrorMessage"])');</script>
    }

    @* 5. قسم السكريبتات الخاص بالصفحات الفرعية *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
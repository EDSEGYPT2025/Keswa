@page
@model IndexModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Production Chart
            const productionCtx = document.getElementById('productionChart');
            if (productionCtx) {
                new Chart(productionCtx, {
                    type: 'bar',
                    data: {
                        labels: @Html.Raw(Model.ProductionChartLabels),
                        datasets: [
                            {
                                label: 'المخطط إنتاجه',
                                data: @Html.Raw(Model.ProductionChartDataPlanned),
                                backgroundColor: 'rgba(22, 160, 133, 0.2)',
                                borderColor: 'rgba(22, 160, 133, 1)',
                                borderWidth: 1
                            },
                            {
                                label: 'المنفذ فعلياً',
                                data: @Html.Raw(Model.ProductionChartDataCompleted),
                                backgroundColor: 'rgba(243, 156, 18, 0.2)',
                                borderColor: 'rgba(243, 156, 18, 1)',
                                borderWidth: 1
                            }
                        ]
                    },
                    options: { responsive: true, maintainAspectRatio: false, scales: { y: { beginAtZero: true } }, plugins: { legend: { position: 'top', } } }
                });
            }

            // Order Status Chart
            const orderStatusCtx = document.getElementById('orderStatusChart');
            if (orderStatusCtx) {
                 new Chart(orderStatusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: @Html.Raw(Model.OrderStatusChartLabels),
                        datasets: [{
                            label: 'حالة الطلبيات',
                            data: @Html.Raw(Model.OrderStatusChartData),
                            backgroundColor: [ 'rgba(52, 152, 219, 0.8)', 'rgba(243, 156, 18, 0.8)', 'rgba(46, 204, 113, 0.8)' ],
                            borderColor: [ 'rgba(52, 152, 219, 1)', 'rgba(243, 156, 18, 1)', 'rgba(46, 204, 113, 1)' ],
                            borderWidth: 1
                        }]
                    },
                    options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { position: 'bottom', } } }
                });
            }
        });
    </script>
}

<!-- Welcome Header -->
<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <div>
        <h1 class="h2 fw-bold">أهلاً بعودتك، @Model.UserFullName!</h1>
        <p class="text-muted">نظرة عامة على أداء المصنع حتى تاريخ اليوم.</p>
    </div>
</div>

<!-- KPI Cards -->
<div class="row g-4">
    <div class="col-sm-6 col-lg-3">
        <div class="card kpi-card shadow-sm border-0 h-100">
            <div class="card-body text-center"> <i class="bi bi-clipboard-data h1 text-primary mb-3"></i> <h3 class="fw-bold mb-1">@Model.OpenWorkOrdersCount</h3> <p class="text-muted mb-0">أمر شغل مفتوح</p> </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card kpi-card shadow-sm border-0 h-100">
            <div class="card-body text-center"> <i class="bi bi-receipt h1 text-success mb-3"></i> <h3 class="fw-bold mb-1">@Model.RecentSalesOrdersCount</h3> <p class="text-muted mb-0">طلبية جديدة (آخر 30 يوم)</p> </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card kpi-card shadow-sm border-0 h-100">
            <div class="card-body text-center"> <i class="bi bi-cart-check h1 text-warning mb-3"></i> <h3 class="fw-bold mb-1">@Model.PendingPurchaseOrdersCount</h3> <p class="text-muted mb-0">أمر شراء معلق</p> </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card kpi-card shadow-sm border-0 h-100">
            <div class="card-body text-center"> <i class="bi bi-exclamation-triangle h1 text-danger mb-3"></i> <h3 class="fw-bold mb-1">@Model.LowStockItemsCount</h3> <p class="text-muted mb-0">صنف قارب على النفاذ</p> </div>
        </div>
    </div>
</div>

<!-- *** تم إضافة هذا القسم الجديد بالكامل *** -->
<!-- Department Summary Cards -->
<div class="row g-4 mt-3">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent d-flex align-items-center">
                <i class="bi bi-scissors fs-4 me-2 text-info"></i>
                <h5 class="fw-bold mb-0">ملخص قسم القص</h5>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center border-end">
                        <h6 class="text-muted">أوامر شغل نشطة</h6>
                        <h3 class="fw-bold display-6">@Model.CuttingSummary.WorkOrderCount</h3>
                    </div>
                    <div class="col-md-9">
                        <div class="row text-center">
                            <div class="col-4"><h6 class="text-muted">الإجمالي المطلوب</h6><p class="fw-bold fs-5">@Model.CuttingSummary.TotalRequired</p></div>
                            <div class="col-4"><h6 class="text-muted">الإجمالي المنجز</h6><p class="fw-bold fs-5 text-success">@Model.CuttingSummary.TotalCompleted</p></div>
                            <div class="col-4"><h6 class="text-muted">الإجمالي المتبقي</h6><p class="fw-bold fs-5 text-danger">@Model.CuttingSummary.Remaining</p></div>
                        </div>
                        <div class="progress mt-2" style="height: 10px;">
                            <div class="progress-bar" role="progressbar" style="width: @Model.CuttingSummary.ProgressPercentage%;" aria-valuenow="@Model.CuttingSummary.ProgressPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent text-end">
                <a asp-page="/Departments/Cutting" class="btn btn-sm btn-outline-primary">الانتقال إلى شاشة القسم <i class="bi bi-arrow-left-circle ms-1"></i></a>
            </div>
        </div>
    </div>
    <!-- Add other department summary cards here in the future -->
</div>


<!-- Charts and Recent Activity Section -->
<div class="row g-4 mt-3">
    <div class="col-lg-7">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-transparent"> <h5 class="fw-bold">مقارنة الإنتاج (آخر 6 أشهر)</h5> </div>
            <div class="card-body"> <div class="chart-container"> <canvas id="productionChart"></canvas> </div> </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-transparent"> <h5 class="fw-bold">حالة الطلبيات الحالية</h5> </div>
            <div class="card-body d-flex justify-content-center align-items-center"> <div class="chart-container"> <canvas id="orderStatusChart"></canvas> </div> </div>
        </div>
    </div>
</div>

<!-- Recent Work Orders Table -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-transparent"> <h5 class="fw-bold">آخر أوامر الشغل المضافة</h5> </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light"> <tr><th>رقم أمر الشغل</th><th>الموديل</th><th>الكمية المطلوبة</th><th>تاريخ الإنشاء</th><th>الحالة</th></tr></thead>
                        <tbody>
                            @foreach (var item in Model.RecentWorkOrders)
                            {
                                <tr>
                                    <td><strong>@item.WorkOrderNumber</strong></td>
                                    <td>@item.Product.Name</td>
                                    <td>@item.QuantityToProduce</td>
                                    <td>@item.CreationDate.ToShortDateString()</td>
                                    <td>
                                        <span class="badge rounded-pill @((item.Status == Keswa.Enums.WorkOrderStatus.New) ? "bg-primary" : (item.Status == Keswa.Enums.WorkOrderStatus.InProgress) ? "bg-warning text-dark" : "bg-success")">
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@page
@model Keswa.Pages.Quality.AssignModel
@{
    ViewData["Title"] = "تعيين عامل";
}

<h1>@ViewData["Title"]</h1>

<h4>المهمة: @Model.Inspection.Product.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inspection.Id" />
            <div class="form-group">
                <label asp-for="SelectedWorkerId" class="control-label"></label>
                <select asp-for="SelectedWorkerId" class="form-control" asp-items="Model.Workers"></select>
                <span asp-validation-for="SelectedWorkerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="تعيين" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">العودة إلى القائمة</a>
</div>

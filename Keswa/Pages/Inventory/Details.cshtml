@page "{id:int}"
@model Keswa.Pages.Inventory.DetailsModel
@{
    ViewData["Title"] = $"أصناف مخزن - {Model.Warehouse.Name}";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold">أصناف مخزن: @Model.Warehouse.Name</h1>
        <p class="text-muted">عرض جميع الأصناف وأرصدتها الحالية في هذا المخزن.</p>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-right me-2"></i>العودة للمخازن</a>
    </div>
</div>

<!-- Inventory Items Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <!-- *** تم التعديل هنا: تحديث الأعمدة *** -->
                        <th style="width: 40%;">اسم الصنف</th>
                        <th style="width: 20%;">اللون</th>
                        <th class="text-center">وحدة القياس</th>
                        <th class="text-center">الرصيد الحالي</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Warehouse.InventoryItems)
                    {
                        <tr>
                            <td>
                                <!-- *** تم التعديل هنا: عرض اسم المادة أو المنتج *** -->
                                <strong>
                                    @(item.Material?.Name ?? item.Product?.Name)
                                </strong>
                            </td>
                            <td>
                                <!-- *** تم إضافة هذا الحقل الجديد *** -->
                                @item.Material?.Color?.Name
                            </td>
                            <td class="text-center">
                                @if (item.Material != null)
                                {
                                    @Html.DisplayFor(modelItem => item.Material.Unit)
                                }
                                else
                                {
                                    @:قطعة
                                }
                            </td>
                            <td class="text-center fw-bold">
                                @Html.DisplayFor(modelItem => item.StockLevel)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

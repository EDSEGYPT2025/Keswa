@page "{id:int}"
@model Keswa.Pages.Inventory.DetailsModel
@{
    ViewData["Title"] = $"أصناف مخزن - {Model.Warehouse.Name}";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 fw-bold">أصناف مخزن: @Model.Warehouse.Name</h1>
        <p class="text-muted">عرض جميع الأصناف وأرصدتها الحالية في هذا المخزن.</p>
    </div>
    <div>
        <a asp-page="./Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-right me-2"></i>العودة للمخازن</a>
        <a href="#" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>إضافة صنف للمخزن</a>
    </div>
</div>

<!-- Inventory Items Table -->
<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>اسم المادة</th>
                        <th>وحدة القياس</th>
                        <th>الرصيد الحالي</th>
                        <th>إجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Warehouse.InventoryItems)
                    {
                        <tr>
                            <td><strong>@Html.DisplayFor(modelItem => item.Material.Name)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Material.Unit)</td>
                            <td>@Html.DisplayFor(modelItem => item.StockLevel)</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-success"><i class="bi bi-plus-lg"></i> إضافة</a>
                                <a href="#" class="btn btn-sm btn-outline-warning"><i class="bi bi-dash-lg"></i> صرف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

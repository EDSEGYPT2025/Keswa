@page
@model Keswa.Pages.Inventory.PendingReturnsModel
@{
    ViewData["Title"] = "مرتجعات معلقة";
}

<div class="mb-4">
    <h1 class="h2 fw-bold">@ViewData["Title"]</h1>
    <p class="text-muted">عرض سندات المرتجعات من الأقسام الإنتاجية التي تنتظر موافقتك.</p>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>رقم السند</th>
                    <th>أمر الشغل</th>
                    <th>القسم</th>
                    <th>تاريخ الإرجاع</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PendingReturnNotes)
                {
                    <tr>
                        <td><strong>@item.ReturnNoteNumber</strong></td>
                        <td>@item.WorkOrder.WorkOrderNumber</td>
                        <td>@item.Department</td>
                        <td>@item.ReturnDate.ToString("yyyy/MM/dd")</td>
                        <td>
                            <a asp-page="./ProcessReturn" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                عرض التفاصيل والموافقة
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>